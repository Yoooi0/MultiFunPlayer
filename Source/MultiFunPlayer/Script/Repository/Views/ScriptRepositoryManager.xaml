<UserControl x:Class="MultiFunPlayer.Script.Repository.Views.ScriptRepositoryManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:s="https://github.com/canton7/Stylet"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:MultiFunPlayer.UI.Controls"
             xmlns:repository="clr-namespace:MultiFunPlayer.Script.Repository"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:ClassModifier="internal">
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type repository:LocalScriptRepository}">
            <DockPanel LastChildFill="True"
                       s:View.ActionTarget="{Binding}"
                       Margin="20">
                <Button DockPanel.Dock="Bottom"
                        Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                        Width="32"
                        Height="32"
                        Padding="0"
                        Click="{s:Action OnLibraryAdd}">
                    <material:PackIcon Kind="Plus"
                                       Width="24"
                                       Height="24"/>
                </Button>
                
                <TextBlock Text="Script libraries" 
                           DockPanel.Dock="Top"
                           FontSize="14"
                           FontWeight="Bold"
                           Typography.Capitals="AllSmallCaps" Margin="0 0 0 10"/>

                <material:Card material:ShadowAssist.ShadowDepth="Depth1" Margin="0 0 0 10" ClipContent="True">
                    <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                                  VerticalScrollBarVisibility="Auto"
                                  MaxHeight="300">
                        <ItemsControl DockPanel.Dock="Bottom"
                                      ItemsSource="{Binding ScriptLibraries}">
                            <ItemsControl.Template>
                                <ControlTemplate>
                                    <ScrollViewer VerticalScrollBarVisibility="Visible" 
                                      HorizontalScrollBarVisibility="Disabled">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </ControlTemplate>
                            </ItemsControl.Template>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="5" Background="{DynamicResource MaterialDesignCardBackground}">
                                        <DockPanel LastChildFill="True">
                                            <Button DockPanel.Dock="Right"   
                                                    Style="{StaticResource MaterialDesignFlatButton}"
                                                    ToolTip="Remove"
                                                    material:RippleAssist.Feedback="{DynamicResource MaterialDesignErrorBrush}"
                                                    Foreground="{DynamicResource MaterialDesignErrorBrush}"
                                                    Height="24" 
                                                    Width="24" 
                                                    Padding="0"
                                                    Click="{s:Action OnLibraryDelete}" >
                                                <material:PackIcon Kind="Delete"/>
                                            </Button>
                                            <Button DockPanel.Dock="Right"   
                                                    Style="{StaticResource MaterialDesignFlatButton}"
                                                    ToolTip="Open location"
                                                    Height="24" 
                                                    Width="24" 
                                                    Padding="0"
                                                    Click="{s:Action OnLibraryOpenFolder}">
                                                <material:PackIcon Kind="FolderOpen"/>
                                            </Button>
                                            <CheckBox IsChecked="{Binding Recursive}"
                                                      DockPanel.Dock="Right"
                                                      Width="24"
                                                      ToolTip="Recurse subdirectories"/>
                                            <TextBlock Text="{Binding Directory.FullName}"
                                                       VerticalAlignment="Center"
                                                       FontSize="12"
                                                       DockPanel.Dock="Left"/>
                                        </DockPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </material:Card>
            </DockPanel>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type repository:StashScriptRepository}">
            <StackPanel Margin="20">
                <DockPanel LastChildFill="True">
                    <TextBlock Text="Endpoint:"
                               DockPanel.Dock="Left"
                               Margin="0 0 10 0"
                               VerticalAlignment="Center"/>

                    <controls:EndPointBox EndPoint="{Binding Endpoint}"
                                          DockPanel.Dock="Left"
                                          HorizontalAlignment="Left"/>
                </DockPanel>
            </StackPanel>
        </DataTemplate>

        <DataTemplate DataType="{x:Type repository:XBVRScriptRepository}">
            <StackPanel Margin="20">
                <DockPanel LastChildFill="True">
                    <TextBlock Text="Endpoint:"
                               DockPanel.Dock="Left"
                               Margin="0 0 10 0"
                               VerticalAlignment="Center"/>

                    <controls:EndPointBox EndPoint="{Binding Endpoint}"
                                          DockPanel.Dock="Left"
                                          HorizontalAlignment="Left"/>
                </DockPanel>
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>
    
    <StackPanel>
        <material:Card>
            <controls:NonReloadingTabControl ItemsSource="{Binding Repositories}">
                <TabControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical" Margin="10 0 10 0" Width="75">
                            <TextBlock Text="{Binding Repository.Name}" 
                                       HorizontalAlignment="Center"/>
                            <ToggleButton Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                          IsChecked="{Binding Enabled}"
                                          Visibility="{Binding CanToggleEnabled, Converter={StaticResource BooleanToVisibilityConverter}}"
                                          Height="13">
                                <material:ToggleButtonAssist.SwitchTrackOnBackground>
                                    <SolidColorBrush Color="{DynamicResource MaterialDesignSuccessColor}" />
                                </material:ToggleButtonAssist.SwitchTrackOnBackground>
                                <material:ToggleButtonAssist.SwitchTrackOffBackground>
                                    <SolidColorBrush Color="{DynamicResource MaterialDesignErrorColor}" />
                                </material:ToggleButtonAssist.SwitchTrackOffBackground>
                            </ToggleButton>
                        </StackPanel>
                    </DataTemplate>
                </TabControl.ItemTemplate>
                <TabControl.ContentTemplate>
                    <DataTemplate>
                        <ContentControl Content="{Binding Repository}"/>
                    </DataTemplate>
                </TabControl.ContentTemplate>
            </controls:NonReloadingTabControl>
        </material:Card>
    </StackPanel>
</UserControl>
