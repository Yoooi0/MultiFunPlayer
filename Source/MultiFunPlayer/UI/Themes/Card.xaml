<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Style TargetType="{x:Type material:Card}" BasedOn="{StaticResource {x:Type material:Card}}" x:Key="MaterialDesignClipCard">
        <Setter Property="ClipContent" Value="True"/>
    </Style>

    <Style TargetType="{x:Type material:Card}" BasedOn="{StaticResource MaterialDesignClipCard}"/>
</ResourceDictionary>