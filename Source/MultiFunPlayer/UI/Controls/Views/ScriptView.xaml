                                                                           DockPanel.Dock="Top">
                                                                <Expander>
                                                                    <Expander.Header>
                                                                        <TextBlock Text="Common settings" 
                                                                                   VerticalAlignment="Center"
                                                                                   Margin="12 0 0 0"
                                                                                   FontSize="14"
                                                                                   FontWeight="Bold"
                                                                                   Typography.Capitals="AllSmallCaps"/>
                                                                    </Expander.Header>

