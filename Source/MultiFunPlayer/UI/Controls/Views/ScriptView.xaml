                                                                        </DataTrigger.Binding>
                                                                        
                                                                        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignErrorBrush}"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </material:PackIcon.Style>
                                                    </material:PackIcon>
                                                </material:PopupBox.ToggleContent>
                                                <Grid Margin="10">
                                                    <StackPanel>
                                                        <Button Content="Bypass all"
                                                                Click="{s:Action OnBypassAll}"
