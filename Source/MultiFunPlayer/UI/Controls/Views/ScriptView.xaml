                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Value.Settings.SpeedLimitEnabled}" Value="True">
                                                            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignSuccessBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Value.State.IsSpeedLimited}" Value="True">
                                                            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignErrorBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </material:PackIcon.Resources>
                                        </material:PackIcon>

                                        <material:PackIcon HorizontalAlignment="Center" VerticalAlignment="Center" Kind="Circle" Width="6" Height="6">
                                            <material:PackIcon.Resources>
                                                <Style TargetType="material:PackIcon">
                                                    <Setter Property="Foreground" Value="{DynamicResource MaterialDesignDivider}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Value.Settings.SmartLimitInputAxis, Converter={StaticResource InvertedNullableToBooleanConverter}}" Value="True">
                                                            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignSuccessBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Value.State.IsSmartLimited}" Value="True">
                                                            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignErrorBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </material:PackIcon.Resources>
                                        </material:PackIcon>
                                    </UniformGrid>
                                </Border>
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </TabControl.ItemTemplate>
                <TabControl.ContentTemplate>
                    <DataTemplate>
                        <DockPanel LastChildFill="True">
                            <Expander material:ExpanderAssist.HorizontalHeaderPadding="0 0 6 0"
                                      Style="{StaticResource MaterialDesignToolBarExpander}"
                                      Background="{DynamicResource MaterialDesignToolBarBackground}"
