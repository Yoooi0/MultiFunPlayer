                                                        <MenuItem.Header>
                                                            <DockPanel LastChildFill="True">
                                                                <Border Width="36" Height="36" DockPanel.Dock="Left">
                                                                    <material:PackIcon Kind="FolderOpen" Width="16" Height="16"/>
