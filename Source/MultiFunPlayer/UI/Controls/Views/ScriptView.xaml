                                                                                           DockPanel.Dock="Left"
                                                                                           VerticalAlignment="Center"/>

                                                                                <ToggleButton Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                                                                              IsChecked="{Binding Value.Settings.UpdateMotionProviderWhenPaused}"
                                                                                              DockPanel.Dock="Right"/>
                                                                            </DockPanel>

                                                                            <DockPanel LastChildFill="False">
                                                                                <TextBlock Text="{Binding Key, StringFormat={}{0} axis has no script}" 
                                                                                           DockPanel.Dock="Left"
                                                                                           VerticalAlignment="Center"/>

                                                                                <ToggleButton Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                                                                              IsChecked="{Binding Value.Settings.UpdateMotionProviderWithoutScript}"
                                                                                              DockPanel.Dock="Right"/>
                                                                            </DockPanel>

                                                                            <DockPanel LastChildFill="False">
                                                                                <ComboBox material:TextFieldAssist.HasClearButton="True"
                                                                                          DockPanel.Dock="Left"
                                                                                          Width="50" 
                                                                                          ItemsSource="{Binding Source={x:Static common:DeviceAxis.All}}" 
                                                                                          SelectedItem="{Binding Value.Settings.UpdateMotionProviderWithAxis}"
                                                                                          SelectionChanged="{s:Action OnUpdateMotionProviderWithAxisChanged}"/>

                                                                                <TextBlock Text="is moving" 
                                                                                           Margin="5 0 0 0"
                                                                                           DockPanel.Dock="Left"
                                                                                           VerticalAlignment="Center"/>
                                                                            </DockPanel>
                                                                        </StackPanel>
                                                                    </StackPanel>
                                                                </Expander>
                                                            </material:Card>

                                                            <Separator DockPanel.Dock="Top" Margin="-10 0 -10 0"/>
                                                            <ContentControl DockPanel.Dock="Bottom">
                                                                <s:View.Model>
                                                                    <MultiBinding Converter="{StaticResource MotionProviderSelectorConverter}">
                                                                        <Binding Path="DataContext.MotionProviderManager" RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type UserControl}}"/>
                                                                        <Binding Path="Key"/>
                                                                        <Binding Path="Value.Settings.SelectedMotionProvider"/>
                                                                    </MultiBinding>
                                                                </s:View.Model>
                                                            </ContentControl>
                                                        </DockPanel>
                                                    </StackPanel>
                                                </Grid>
                                            </material:PopupBox>

                                            <material:PopupBox DockPanel.Dock="Left"
                                                               StaysOpen="True" 
                                                               IsPopupOpen="False"
                                                               Style="{StaticResource MaterialDesignToolBarPopupBox}"
                                                               ToolTip="Smart limit">
                                                <material:PopupBox.ToggleContent>
                                                    <material:PackIcon Kind="ChartSnakeyVariant" 
                                                                       Width="18" 
                                                                       Height="18">
                                                        <material:PackIcon.Style>
                                                            <Style TargetType="material:PackIcon">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Value.Settings.SmartLimitInputAxis, Converter={StaticResource InvertedNullableToBooleanConverter}}" Value="True">
                                                                        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignSuccessBrush}"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </material:PackIcon.Style>
                                                    </material:PackIcon>
                                                </material:PopupBox.ToggleContent>
                                                
                                                <Grid Margin="10" Width="195">
                                                    <StackPanel>
                                                        <DockPanel LastChildFill="True">
                                                            <TextBlock Text="Input axis:" 
                                                                       DockPanel.Dock="Left"
                                                                       Margin="0 0 10 0" 
                                                                       VerticalAlignment="Center"/>
                                                            
                                                            <ComboBox DockPanel.Dock="Left"
                                                                      material:TextFieldAssist.HasClearButton="True"
                                                                      ItemsSource="{Binding Source={x:Static common:DeviceAxis.All}}" 
                                                                      SelectedItem="{Binding Value.Settings.SmartLimitInputAxis}"
                                                                      SelectionChanged="{s:Action OnSelectedSmartLimitInputAxisChanged}"/>
                                                        </DockPanel>

                                                        <controls:SmartLimitPreview Points="{Binding Value.Settings.SmartLimitPoints}"
                                                                                    x:Name="SmartLimitPreview"
                                                                                    Margin="0 0 0 20"
                                                                                    HorizontalAlignment="Center">
                                                            <controls:SmartLimitPreview.Triggers>
                                                                <EventTrigger RoutedEvent="Loaded">
                                                                    <BeginStoryboard>
                                                                        <Storyboard RepeatBehavior="Forever">
                                                                            <DoubleAnimation Storyboard.TargetProperty="Input"
                                                                                             From="0"
                                                                                             To="0"
                                                                                             BeginTime="0:0:0"
                                                                                             Duration="0:0:0.500"/>
                                                                            <DoubleAnimation Storyboard.TargetProperty="Input"
                                                                                             From="0"
                                                                                             To="100"
                                                                                             BeginTime="0:0:0.500"
                                                                                             Duration="0:0:3"/>
                                                                            <DoubleAnimation Storyboard.TargetProperty="Input"
                                                                                             From="100"
                                                                                             To="100"
                                                                                             BeginTime="0:0:3.500"
                                                                                             Duration="0:0:0.500"/>
                                                                            <DoubleAnimation Storyboard.TargetProperty="Input"
                                                                                             From="100"
                                                                                             To="0"
                                                                                             BeginTime="0:0:4"
                                                                                             Duration="0:0:3"/>
                                                                        </Storyboard>
                                                                    </BeginStoryboard>
                                                                </EventTrigger>
                                                            </controls:SmartLimitPreview.Triggers>
                                                        </controls:SmartLimitPreview>

                                                        <DockPanel LastChildFill="True">
                                                            <TextBlock Text="Mode:" 
                                                                       DockPanel.Dock="Left"
                                                                       Margin="0 0 10 0" 
                                                                       VerticalAlignment="Center"/>

                                                            <ComboBox DockPanel.Dock="Left"
                                                                      material:TextFieldAssist.HasClearButton="True"
                                                                      ItemsSource="{Binding Source={ui:EnumBindingSource {x:Type vm:SmartLimitMode}}}" 
                                                                      SelectedItem="{Binding Value.Settings.SmartLimitMode}"/>
                                                        </DockPanel>

                                                        <DockPanel LastChildFill="True">
                                                            <DockPanel.Resources>
                                                                <Style TargetType="{x:Type DockPanel}">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Value.Settings.SmartLimitMode}" Value="Value">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </DockPanel.Resources>
                                                            
                                                            <TextBlock Text="Target value:" 
                                                                       DockPanel.Dock="Left"
                                                                       Margin="0 0 10 0" 
                                                                       VerticalAlignment="Center"/>

                                                            <metro:NumericUpDown Value="{Binding Value.Settings.SmartLimitTargetValue}"
                                                                                 Minimum="0"
                                                                                 Maximum="1"
                                                                                 Interval="0.01"
                                                                                 StringFormat="P0"/>
                                                        </DockPanel>

                                                        <TextBlock Text="when..." 
                                                                   Margin="0 10 0 0"
                                                                   VerticalAlignment="Center"
                                                                   FontSize="12"
                                                                   FontWeight="Bold"
                                                                   Typography.Capitals="AllSmallCaps"/>
                                                        
                                                        <DockPanel>
                                                            <TextBlock Text="{Binding Value.Settings.SmartLimitInputAxis}" 
                                                                       DockPanel.Dock="Left"
                                                                       Margin="0 0 5 0" 
                                                                       VerticalAlignment="Center"/>
                                                            
                                                            <TextBlock Text="axis value is at:" 
                                                                       DockPanel.Dock="Left"
                                                                       Margin="0 0 5 0" 
                                                                       VerticalAlignment="Center"/>
                                                            
                                                            <TextBlock Text="{Binding Input, StringFormat={}{0:F0}%, ElementName=SmartLimitPreview}"/>
                                                        </DockPanel>

                                                        <TextBlock Text="then..." 
                                                                   Margin="0 10 0 0"
                                                                   VerticalAlignment="Center"
                                                                   FontSize="12"
                                                                   FontWeight="Bold"
                                                                   Typography.Capitals="AllSmallCaps"/>

                                                        <DockPanel>
                                                            <TextBlock Text="Limit" 
                                                                       DockPanel.Dock="Left"
                                                                       Margin="0 0 5 0" 
                                                                       VerticalAlignment="Center"/>
                                                            
                                                            <TextBlock Text="{Binding Key}" 
                                                                       DockPanel.Dock="Left"
                                                                       Margin="0 0 5 0" 
                                                                       VerticalAlignment="Center"/>

                                                            <TextBlock DockPanel.Dock="Left"
                                                                       VerticalAlignment="Center">
                                                                <TextBlock.Resources>
                                                                    <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource MaterialDesignTextBlock}">
                                                                        <Setter Property="Text" Value="axis speed to:  "/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding Value.Settings.SmartLimitMode}" Value="Value">
                                                                                <Setter Property="Text" Value="axis range to:  &#x00B1;"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Resources>
                                                            </TextBlock>

                                                            <TextBlock Text="{Binding Output, StringFormat={}{0:F0}%, ElementName=SmartLimitPreview}"
                                                                       DockPanel.Dock="Left"
                                                                       VerticalAlignment="Center"/>
                                                        </DockPanel>

                                                        <DockPanel>
                                                            <DockPanel.Resources>
                                                                <Style TargetType="{x:Type DockPanel}">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Value.Settings.SmartLimitMode}" Value="Value">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </DockPanel.Resources>

                                                            <TextBlock Text="from target value" 
                                                                       DockPanel.Dock="Left"
                                                                       Margin="0 0 5 0" 
                                                                       VerticalAlignment="Center"/>
                                                        </DockPanel>
                                                    </StackPanel>
                                                </Grid>
                                            </material:PopupBox>

                                            <material:PopupBox DockPanel.Dock="Left"
                                                                   StaysOpen="True" 
                                                                   Style="{StaticResource MaterialDesignToolBarPopupBox}"
                                                                   ToolTip="Speed limit">
                                                <material:PopupBox.ToggleContent>
                                                    <material:PackIcon Kind="CarSpeedLimiter" 
                                                                       Width="22" 
                                                                       Height="22">
                                                        <material:PackIcon.Style>
                                                            <Style TargetType="material:PackIcon">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Value.Settings.SpeedLimitEnabled}" Value="True">
                                                                        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignSuccessBrush}"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </material:PackIcon.Style>
                                                    </material:PackIcon>
                                                </material:PopupBox.ToggleContent>
                                                <Grid Margin="10">
                                                    <StackPanel Width="200">
                                                        <StackPanel Margin="0 0 0 10" Orientation="Horizontal">
                                                            <TextBlock Text="Enabled:" 
                                                                           Width="50"
                                                                           Margin="0 0 10 0"
                                                                           VerticalAlignment="Center"/>

                                                            <CheckBox IsChecked="{Binding Value.Settings.SpeedLimitEnabled}"
                                                                          Style="{StaticResource MaterialDesignSwitchToggleButton}"/>
                                                        </StackPanel>

                                                        <DockPanel LastChildFill="True">
                                                            <TextBlock Text="Limit: " 
                                                                       VerticalAlignment="Center"
                                                                       Margin="0 0 10 0"
                                                                       DockPanel.Dock="Left" />

                                                            <metro:NumericUpDown Value="{Binding Value.Settings.MaximumSecondsPerStroke}"
                                                                                 Minimum="0.001"
                                                                                 Maximum="10"
                                                                                 Interval="0.001"
                                                                                 StringFormat="{}{0:F3}s/stroke"/>
                                                        </DockPanel>
                                                    </StackPanel>
                                                </Grid>
                                            </material:PopupBox>

                                            <material:PopupBox DockPanel.Dock="Left"
                                                                   StaysOpen="True" 
                                                                   Style="{StaticResource MaterialDesignToolBarPopupBox}"
                                                                   ToolTip="Interpolation">
                                                <material:PopupBox.ToggleContent>
                                                    <material:PackIcon Kind="ChartBellCurve" 
                                                                       Width="20" 
                                                                       Height="20"/>
                                                </material:PopupBox.ToggleContent>
                                                <Grid Margin="10">
                                                    <StackPanel>
                                                        <controls:InterpolationPreview InterpolationType="{Binding Value.Settings.InterpolationType}" 
                                                                                       Width="160" Height="80"
                                                                                       Margin="0 0 0 20"/>

                                                        <DockPanel LastChildFill="True">
                                                            <TextBlock Text="Type:" 
                                                                           DockPanel.Dock="Left"
                                                                           Width="30"
                                                                           Margin="0 0 10 0"
                                                                           VerticalAlignment="Center"/>

                                                            <ComboBox DockPanel.Dock="Left"
                                                                      ItemsSource="{Binding Source={ui:EnumBindingSource {x:Type common:InterpolationType}}}" 
                                                                      SelectedItem="{Binding Value.Settings.InterpolationType}"/>
                                                        </DockPanel>
                                                    </StackPanel>
                                                </Grid>
                                            </material:PopupBox>

                                            <material:PopupBox DockPanel.Dock="Left"
                                                                   StaysOpen="True" 
                                                                   Style="{StaticResource MaterialDesignToolBarPopupBox}"
                                                                   ToolTip="Auto-home">
                                                <material:PopupBox.ToggleContent>
                                                    <material:PackIcon Kind="Home" 
                                                                       Width="22" 
                                                                       Height="22">
                                                        <material:PackIcon.Style>
                                                            <Style TargetType="material:PackIcon">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Value.Settings.AutoHomeEnabled}" Value="True">
                                                                        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignSuccessBrush}"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </material:PackIcon.Style>
                                                    </material:PackIcon>
                                                </material:PopupBox.ToggleContent>
                                                <Grid Width="200" Margin="10">
                                                    <StackPanel>
                                                        <DockPanel LastChildFill="False" Margin="0 0 0 10">
                                                            <TextBlock Text="Enabled:"
                                                                       DockPanel.Dock="Left"
                                                                       Margin="0 0 10 0"
                                                                       VerticalAlignment="Center"/>

                                                            <CheckBox IsChecked="{Binding Value.Settings.AutoHomeEnabled}"
                                                                      Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                                                      DockPanel.Dock="Left"/>
                                                        </DockPanel>
                                                        
                                                        <DockPanel LastChildFill="False" Margin="0 0 0 10">
                                                            <TextBlock Text="Auto-home inside script:"
                                                                       DockPanel.Dock="Left"
                                                                       Margin="0 0 10 0"
                                                                       VerticalAlignment="Center"/>

                                                            <CheckBox IsChecked="{Binding Value.Settings.AutoHomeInsideScript}"
                                                                      Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                                                      DockPanel.Dock="Left"/>
                                                        </DockPanel>

                                                        <DockPanel>
                                                            <TextBlock Text="Delay:" 
                                                                       DockPanel.Dock="Left"
                                                                       Margin="0 0 10 0"
                                                                       VerticalAlignment="Center"/>
                                                            
                                                            <metro:NumericUpDown Value="{Binding Value.Settings.AutoHomeDelay}"
                                                                                 Minimum="0"
                                                                                 Interval="0.5"
                                                                                 StringFormat="{}{0:0.00}s"/>
                                                        </DockPanel>

                                                        <DockPanel>
                                                            <TextBlock Text="Duration:" 
                                                                       DockPanel.Dock="Left"
                                                                       Margin="0 0 10 0"
                                                                       VerticalAlignment="Center"/>
                                                            
                                                            <metro:NumericUpDown Value="{Binding Value.Settings.AutoHomeDuration}"
                                                                                 Minimum="0"
                                                                                 Interval="0.5"
                                                                                 StringFormat="{}{0:0.00}s"/>
                                                        </DockPanel>

                                                        <DockPanel>
                                                            <TextBlock Text="Target value:" 
                                                                       DockPanel.Dock="Left"
                                                                       Margin="0 0 10 0"
                                                                       VerticalAlignment="Center"/>

                                                            <metro:NumericUpDown Value="{Binding Value.Settings.AutoHomeTargetValue}"
                                                                                 Minimum="0"
                                                                                 Maximum="1"
                                                                                 Interval="0.01"
                                                                                 StringFormat="P0"/>
                                                        </DockPanel>
                                                    </StackPanel>
                                                </Grid>
                                            </material:PopupBox>
                                        </StackPanel>
                                    </DockPanel>
                                </Expander.Header>

                                <StackPanel Margin="20 15 20 15">
                                    <DockPanel LastChildFill="True" 
                                               Margin="0 0 0 10">
                                        <TextBlock Text="File:" 
                                                   DockPanel.Dock="Left" 
                                                   Margin="0 0 10 0" 
                                                   VerticalAlignment="Center"/>

                                        <TextBox Text="{Binding Value.Script.Name, Mode=OneWay}"
                                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                                 material:HintAssist.Hint="{Binding Value.Script.Source}"
                                                 Drop="{s:Action OnAxisDrop}"
                                                 PreviewDragEnter="{s:Action OnPreviewDragOver}"
                                                 PreviewDragOver="{s:Action OnPreviewDragOver}"
                                                 IsReadOnly="True"
                                                 VerticalAlignment="Center"
                                                 DockPanel.Dock="Right" 
                                                 Margin="0 -10 0 0"
                                                 TextAlignment="Left"/>
                                    </DockPanel>
                                    <DockPanel>
                                        <DockPanel LastChildFill="True" DockPanel.Dock="Left" Margin="0 0 20 0">
                                            <TextBlock Text="Offset:" DockPanel.Dock="Left" Margin="0 0 10 0" VerticalAlignment="Center"/>

                                            <metro:NumericUpDown Value="{Binding Value.Settings.Offset}"
                                                                 Interval="0.1"
                                                                 StringFormat="{}{0:F2}s"
                                                                 TrackMouseWheelWhenMouseOver="True"
                                                                 ValueChanged="{s:Action OnOffsetValueChanged}"
                                                                 Width="100"/>
                                        </DockPanel>
                                        <DockPanel LastChildFill="True" DockPanel.Dock="Left">
                                            <TextBlock Text="Scale:" DockPanel.Dock="Left" Margin="0 0 10 0" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding Value.Settings.ScriptScale, StringFormat={}{0:0}%}" 
                                                   VerticalAlignment="Center"
                                                   DockPanel.Dock="Right" 
                                                   Width="50"
                                                   TextAlignment="Right"/>

                                            <Slider Value="{Binding Value.Settings.ScriptScale}" 
                                                DockPanel.Dock="Left"
                                                Minimum="1" 
                                                Maximum="400"
                                                TickFrequency="1"
                                                IsSnapToTickEnabled="True"
                                                ValueChanged="{s:Action OnScriptScaleSliderValueChanged}"
                                                behaviours:SliderAssist.DefaultValueOnDoubleClick="100"
                                                material:SliderAssist.OnlyShowFocusVisualWhileDragging="True"/>
                                        </DockPanel>
                                    </DockPanel>
                                </StackPanel>
                            </Expander>
                        </DockPanel>
                    </DataTemplate>
                </TabControl.ContentTemplate>
            </controls:NonReloadingTabControl>
        </material:Card>

        <material:Card material:ShadowAssist.ShadowDepth="Depth1">
            <Expander IsExpanded="{Binding ValuesContentVisible}"
                      Style="{StaticResource MaterialDesignToolBarExpander}"
                      material:ExpanderAssist.HorizontalHeaderPadding="24 6 6 6"
                      Background="{DynamicResource MaterialDesignToolBarBackground}">
                <Expander.Header>
                    <TextBlock Text="Axis values" 
                               VerticalAlignment="Center"
                               Margin="12 0 0 0"
                               FontSize="14"
                               FontWeight="Bold"
                               Typography.Capitals="AllSmallCaps"/>
                </Expander.Header>

                <StackPanel Margin="15 15 15 15">
                    <ItemsControl ItemsSource="{Binding AxisStates}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="3" IsItemsHost="True"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemContainerStyle>
                            <Style>
                                <Setter Property="FrameworkElement.Margin" Value="5 0 5 0"/>
                            </Style>
                        </ItemsControl.ItemContainerStyle>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <DockPanel Margin="0" LastChildFill="True">
                                    <TextBlock DockPanel.Dock="Left" Margin="0 0 5 0" 
                                               Width="15" 
                                               Text="{Binding Key, Mode=OneWay}"/>
                                    <ProgressBar material:TransitionAssist.DisableTransitions="True"
                                                 DockPanel.Dock="Right"
                                                 Minimum="0"
                                                 Maximum="100"
                                                 Height="10"
                                                 Width="155"
                                                 Value="{Binding Value.Value, Mode=OneWay, Converter={StaticResource DoubleToPercentConverter}}">
                                        <ProgressBar.Style>
                                            <Style TargetType="ProgressBar" BasedOn="{StaticResource MaterialDesignLinearProgressBar}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Value.InsideScript}" Value="False">
                                                        <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ProgressBar.Style>
                                    </ProgressBar>
                                </DockPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Expander>
        </material:Card>
    </StackPanel>
</UserControl>
