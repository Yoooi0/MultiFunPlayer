<UserControl x:Class="MultiFunPlayer.UI.Controls.Views.ScriptView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:behaviours="clr-namespace:MultiFunPlayer.UI.Behaviours"
             xmlns:common="clr-namespace:MultiFunPlayer.Common"
             xmlns:controls="clr-namespace:MultiFunPlayer.UI.Controls"
             xmlns:converters="clr-namespace:MultiFunPlayer.UI.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:s="https://github.com/canton7/Stylet"
             xmlns:ui="clr-namespace:MultiFunPlayer.UI"
             xmlns:vm="clr-namespace:MultiFunPlayer.UI.Controls.ViewModels"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:ClassModifier="internal"
             mc:Ignorable="d">
    <UserControl.Resources>
        <converters:DoubleToPercentConverter x:Key="DoubleToPercentConverter"/>
        <converters:MultiObjectToArrayConverter x:Key="MultiObjectToArrayConverter"/>
        <converters:MotionProviderSelectorConverter x:Key="MotionProviderSelectorConverter"/>
        <converters:MotionProviderOverridesScriptConverter x:Key="MotionProviderOverridesScriptConverter"/>
        <converters:InvertValueConverter x:Key="InvertValueConverter"/>
    </UserControl.Resources>
    <StackPanel Margin="0 0 0 20">
        <material:Card Margin="0 0 0 10" material:ShadowAssist.ShadowDepth="Depth1">
            <Expander Style="{StaticResource MaterialDesignToolBarExpander}"
                      material:ExpanderAssist.HorizontalHeaderPadding="0 0 6 0"
                      Background="{DynamicResource MaterialDesignToolBarBackground}"
                      IsExpanded="{Binding MediaContentVisible}">
                <Expander.Header>
                    <DockPanel Height="36" LastChildFill="True">
                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                            <Button Width="36"
                                    Height="36"
                                    Padding="0"
                                    Click="{s:Action OnPlayPauseClick}">
                                <Button.Style>
                                    <Style BasedOn="{StaticResource MaterialDesignToolBarButton}" TargetType="{x:Type Button}">
                                        <Setter Property="ToolTip" Value="Play"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsPlaying}" Value="True">
                                                <Setter Property="ToolTip" Value="Pause"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>

                                <material:PackIcon Width="28"
                                                   Height="28"
                                                   VerticalAlignment="Center">
                                    <material:PackIcon.Style>
                                        <Style TargetType="material:PackIcon">
                                            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignSuccessBrush}"/>
                                            <Setter Property="Kind" Value="Play"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsPlaying}" Value="True">
                                                    <Setter Property="Foreground" Value="{DynamicResource MaterialDesignErrorBrush}"/>
                                                    <Setter Property="Kind" Value="Pause"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </material:PackIcon.Style>
                                </material:PackIcon>
                            </Button>

                            <material:PopupBox Style="{StaticResource MaterialDesignToolBarPopupBox}"
                                               PlacementMode="BottomAndAlignRightEdges"
                                               StaysOpen="True"
                                               ToolTip="Sync settings">
                                <material:PopupBox.ToggleContent>
                                    <Grid Width="24" Height="24">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="24"/>
                                            <RowDefinition Height="24"/>
                                        </Grid.RowDefinitions>

                                        <material:PackIcon Grid.Row="0"
                                                           Width="16"
                                                           Height="16"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           Kind="FastForward">
                                            <material:PackIcon.Style>
                                                <Style TargetType="material:PackIcon">
                                                    <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsSyncing}" Value="True">
                                                            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignErrorBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </material:PackIcon.Style>
                                        </material:PackIcon>
                                        <ProgressBar Grid.Row="1"
                                                     Width="24"
                                                     Height="24"
                                                     Margin="0 -24 0 24"
                                                     VerticalAlignment="Center"
                                                     Value="{Binding SyncProgress, Mode=OneWay}">
                                            <ProgressBar.Style>
                                                <Style BasedOn="{StaticResource MaterialDesignCircularProgressBar}" TargetType="ProgressBar">
                                                    <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsSyncing}" Value="True">
                                                            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignErrorBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ProgressBar.Style>
                                        </ProgressBar>
                                    </Grid>
                                </material:PopupBox.ToggleContent>

                                <Grid Width="250" Margin="10">
                                    <StackPanel Orientation="Vertical">
                                        <DockPanel LastChildFill="True">
                                            <TextBlock DockPanel.Dock="Left"
                                                       Margin="0 0 10 0"
                                                       VerticalAlignment="Center"
                                                       Text="Duration:"/>
                                            <TextBlock DockPanel.Dock="Right"
                                                       Margin="10 0 0 0"
                                                       VerticalAlignment="Center"
                                                       Text="{Binding SyncSettings.Duration, StringFormat={}{0:F2}s}"/>
                                            <Slider DockPanel.Dock="Right"
                                                    VerticalAlignment="Center"
                                                    material:SliderAssist.OnlyShowFocusVisualWhileDragging="True"
                                                    IsSnapToTickEnabled="True"
                                                    Maximum="8"
                                                    Minimum="0.5"
                                                    TickFrequency="0.5"
                                                    Value="{Binding SyncSettings.Duration}"/>
                                        </DockPanel>

                                        <DockPanel Margin="0 10 0 0" LastChildFill="False">
                                            <TextBlock DockPanel.Dock="Left"
                                                       Margin="0 0 5 0"
                                                       HorizontalAlignment="Left"
                                                       VerticalAlignment="Center"
                                                       FontWeight="Bold"
                                                       Text="Sync when:"
                                                       Typography.Capitals="AllSmallCaps"/>
                                            <material:ColorZone DockPanel.Dock="Left"
                                                                Width="14"
                                                                Height="14"
                                                                VerticalAlignment="Center"
                                                                Background="{DynamicResource MaterialDesignWarningBrush}"
                                                                CornerRadius="7"
                                                                Mode="Custom">
                                                <material:ColorZone.ToolTip>
                                                    <TextBlock>
                                                        The sync feature is there to prevent<LineBreak/>
                                                        sudden unwanted motion.<LineBreak/>
                                                        These settings are for advanced usage only.</TextBlock>
                                                </material:ColorZone.ToolTip>
                                                <material:PackIcon Width="10"
                                                                   Height="10"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"
                                                                   Foreground="Black"
                                                                   Kind="ExclamationBold"/>
                                            </material:ColorZone>
                                        </DockPanel>
                                        <DockPanel Margin="0 5 0 0" LastChildFill="False">
                                            <TextBlock DockPanel.Dock="Left" Text="Media resource changed:"/>
                                            <ToggleButton DockPanel.Dock="Right" IsChecked="{Binding SyncSettings.SyncOnMediaResourceChanged}"/>
                                        </DockPanel>

                                        <DockPanel Margin="0 5 0 0" LastChildFill="False">
                                            <TextBlock DockPanel.Dock="Left" Text="Media play/pause:"/>
                                            <ToggleButton DockPanel.Dock="Right" IsChecked="{Binding SyncSettings.SyncOnMediaPlayPause}"/>
                                        </DockPanel>

                                        <DockPanel Margin="0 5 0 0" LastChildFill="False">
                                            <TextBlock DockPanel.Dock="Left" Text="Seek:"/>
                                            <ToggleButton DockPanel.Dock="Right" IsChecked="{Binding SyncSettings.SyncOnSeek}"/>
                                        </DockPanel>

                                        <DockPanel Margin="0 5 0 0" LastChildFill="False">
                                            <TextBlock DockPanel.Dock="Left" Text="Auto-home start/end:"/>
                                            <ToggleButton DockPanel.Dock="Right" IsChecked="{Binding SyncSettings.SyncOnAutoHomeStartEnd}"/>
                                        </DockPanel>
                                    </StackPanel>
                                </Grid>
                            </material:PopupBox>
                        </StackPanel>
                        <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                            <Button Style="{StaticResource MaterialDesignToolBarButton}"
                                    Padding="8"
                                    Click="{s:Action OnOpenMediaLocation}"
                                    IsEnabled="{Binding MediaResource, Converter={StaticResource InvertedNullableToBooleanConverter}}"
                                    ToolTip="Open media location">
                                <material:PackIcon Width="19"
                                                   Height="19"
                                                   Kind="FolderOpen"/>
                            </Button>

                            <Button Style="{StaticResource MaterialDesignToolBarButton}"
                                    Padding="8"
                                    Command="{x:Static material:DialogHost.OpenDialogCommand}"
                                    ToolTip="Script repositories">
                                <material:PackIcon Width="19"
                                                   Height="19"
                                                   Kind="DatabaseSearch"/>

                                <Button.CommandParameter>
                                    <Grid s:View.ActionTarget="{Binding}"
                                          MinWidth="100"
                                          Margin="20">
                                        <TextBlock Margin="0 -12 -15 0"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Top"
                                                   FontSize="14"
                                                   FontWeight="Bold"
                                                   Text="Script repositories"
                                                   Typography.Capitals="AllSmallCaps"/>

                                        <Button DockPanel.Dock="Top"
                                                Style="{StaticResource MaterialDesignFlatButton}"
                                                Width="24"
                                                Height="24"
                                                Margin="0 -15 -15 0"
                                                Padding="0"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                material:RippleAssist.Feedback="{DynamicResource MaterialDesignBody}"
                                                Command="{x:Static material:DialogHost.CloseDialogCommand}"
                                                Foreground="{DynamicResource MaterialDesignBody}">
                                            <material:PackIcon Width="20"
                                                               Height="20"
                                                               Kind="Close"/>
                                        </Button>

                                        <ContentControl s:View.Model="{Binding ScriptRepositoryManager}" Margin="0 20 0 0"/>
                                    </Grid>
                                </Button.CommandParameter>
                            </Button>

                            <Button Style="{StaticResource MaterialDesignToolBarButton}"
                                    Padding="8"
                                    Command="{x:Static material:DialogHost.OpenDialogCommand}"
                                    ToolTip="Media path modifiers">
                                <Button.CommandParameter>
                                    <material:DialogHost Identifier="MediaPathModifierDialog">
                                        <Grid s:View.ActionTarget="{Binding}"
                                              Width="500"
                                              MaxHeight="400"
                                              Margin="20">
                                            <TextBlock Margin="0 -12 -15 0"
                                                       HorizontalAlignment="Left"
                                                       VerticalAlignment="Top"
                                                       FontSize="14"
                                                       FontWeight="Bold"
                                                       Text="Media path modifiers"
                                                       Typography.Capitals="AllSmallCaps"/>

                                            <Button DockPanel.Dock="Top"
                                                    Style="{StaticResource MaterialDesignFlatButton}"
                                                    Width="24"
                                                    Height="24"
                                                    Margin="0 -15 -15 0"
                                                    Padding="0"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Top"
                                                    material:RippleAssist.Feedback="{DynamicResource MaterialDesignBody}"
                                                    Command="{x:Static material:DialogHost.CloseDialogCommand}"
                                                    Foreground="{DynamicResource MaterialDesignBody}">
                                                <material:PackIcon Width="20"
                                                                   Height="20"
                                                                   Kind="Close"/>
                                            </Button>
                                            <DockPanel Margin="0 20 0 0" LastChildFill="True">
                                                <material:PopupBox DockPanel.Dock="Bottom"
                                                                   Style="{StaticResource MaterialDesignMultiFloatingActionPopupBox}"
                                                                   Width="32"
                                                                   Height="32"
                                                                   HorizontalAlignment="Center">

                                                    <material:PopupBox.ToggleContent>
                                                        <material:PackIcon Width="22"
                                                                           Height="22"
                                                                           HorizontalAlignment="Center"
                                                                           VerticalAlignment="Center"
                                                                           Kind="Plus"/>
                                                    </material:PopupBox.ToggleContent>

                                                    <material:Card>
                                                        <ItemsControl ItemsSource="{Binding MediaPathModifierTypes}" Margin="10">
                                                            <ItemsControl.ItemsPanel>
                                                                <ItemsPanelTemplate>
                                                                    <VirtualizingStackPanel/>
                                                                </ItemsPanelTemplate>
                                                            </ItemsControl.ItemsPanel>

                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate>
                                                                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                                                            Height="20"
                                                                            Margin="5"
                                                                            Padding="10 0 10 0"
                                                                            Click="{s:Action OnMediaPathModifierAdd}"
                                                                            Content="{Binding Key}"/>
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>
                                                    </material:Card>
                                                </material:PopupBox>

                                                <material:Card Margin="0 0 0 10" material:ShadowAssist.ShadowDepth="Depth1">
                                                    <ItemsControl DockPanel.Dock="Bottom" ItemsSource="{Binding MediaPathModifiers}">
                                                        <ItemsControl.Template>
                                                            <ControlTemplate>
                                                                <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Visible">
                                                                    <ItemsPresenter/>
                                                                </ScrollViewer>
                                                            </ControlTemplate>
                                                        </ItemsControl.Template>
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <Border Padding="5" Background="{DynamicResource MaterialDesignCardBackground}">
                                                                    <DockPanel Margin="5 0 0 0" LastChildFill="True">
                                                                        <Button DockPanel.Dock="Right"
                                                                                Style="{StaticResource MaterialDesignFlatButton}"
                                                                                Width="24"
                                                                                Height="24"
                                                                                Padding="0"
                                                                                material:RippleAssist.Feedback="{DynamicResource MaterialDesignErrorBrush}"
                                                                                Click="{s:Action OnMediaPathModifierRemove}"
                                                                                Foreground="{DynamicResource MaterialDesignErrorBrush}"
                                                                                ToolTip="Remove">
                                                                            <material:PackIcon Kind="Delete"/>
                                                                        </Button>

                                                                        <Button DockPanel.Dock="Right"
                                                                                Style="{StaticResource MaterialDesignFlatButton}"
                                                                                Width="24"
                                                                                Height="24"
                                                                                Padding="0"
                                                                                Click="{s:Action OnMediaPathModifierConfigure}"
                                                                                ToolTip="Configure">
                                                                            <material:PackIcon Width="14"
                                                                                               Height="14"
                                                                                               Kind="Wrench"/>
                                                                        </Button>

                                                                        <TextBlock DockPanel.Dock="Left"
                                                                                   Margin="0 0 10 0"
                                                                                   VerticalAlignment="Center"
                                                                                   FontWeight="Bold"
                                                                                   Text="{Binding Name, StringFormat={}{0}:}"/>
                                                                        <TextBlock DockPanel.Dock="Left"
                                                                                   VerticalAlignment="Center"
                                                                                   Text="{Binding Description}"/>
                                                                    </DockPanel>
                                                                </Border>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </material:Card>
                                            </DockPanel>
                                        </Grid>

                                        <material:DialogHost.DialogContentTemplate>
                                            <DataTemplate>
                                                <DockPanel Width="475" Margin="20">
                                                    <Button DockPanel.Dock="Top"
                                                            Style="{StaticResource MaterialDesignFlatButton}"
                                                            Width="24"
                                                            Height="24"
                                                            Margin="0 -15 -15 0"
                                                            Padding="0"
                                                            HorizontalAlignment="Right"
                                                            VerticalAlignment="Top"
                                                            material:RippleAssist.Feedback="{DynamicResource MaterialDesignBody}"
                                                            Command="{x:Static material:DialogHost.CloseDialogCommand}"
                                                            Foreground="{DynamicResource MaterialDesignBody}">
                                                        <material:PackIcon Width="20"
                                                                           Height="20"
                                                                           Kind="Close"/>
                                                    </Button>

                                                    <ContentControl s:View.Model="{Binding}" DockPanel.Dock="Bottom"/>
                                                </DockPanel>
                                            </DataTemplate>
                                        </material:DialogHost.DialogContentTemplate>
                                    </material:DialogHost>
                                </Button.CommandParameter>
                                <material:PackIcon Width="19"
                                                   Height="19"
                                                   Kind="FileReplaceOutline"/>
                            </Button>

                            <Button Style="{StaticResource MaterialDesignToolBarButton}"
                                    Padding="8"
                                    Click="{s:Action OnMapCurrentMediaPathToFile}"
                                    ToolTip="Map media path to file">

                                <Button.IsEnabled>
                                    <MultiBinding Converter="{StaticResource BooleanAllConverter}">
                                        <MultiBinding.Bindings>
                                            <Binding Converter="{StaticResource InvertedNullableToBooleanConverter}" Path="MediaResource"/>
                                            <Binding Path="MediaResource.IsUrl"/>
                                        </MultiBinding.Bindings>
                                    </MultiBinding>
                                </Button.IsEnabled>
                                <material:PackIcon Width="19"
                                                   Height="19"
                                                   Kind="LinkPlus"/>
                            </Button>

                            <material:PopupBox DockPanel.Dock="Left"
                                               Style="{StaticResource MaterialDesignToolBarPopupBox}"
                                               StaysOpen="True"
                                               ToolTip="Auto-skip">
                                <material:PopupBox.ToggleContent>
                                    <material:PackIcon Width="22"
                                                       Height="22"
                                                       Kind="SkipForward"/>
                                </material:PopupBox.ToggleContent>
                                <Grid Width="200" Margin="10">
                                    <StackPanel>
                                        <StackPanel Margin="0 0 0 10" Orientation="Horizontal">
                                            <TextBlock Width="50"
                                                       Margin="0 0 10 0"
                                                       VerticalAlignment="Center"
                                                       Text="Enabled:"/>

                                            <CheckBox Style="{StaticResource MaterialDesignSwitchToggleButton}" IsChecked="{Binding AutoSkipToScriptStartEnabled}"/>
                                        </StackPanel>

                                        <DockPanel Margin="0 0 0 10">
                                            <TextBlock DockPanel.Dock="Left"
                                                       Width="50"
                                                       Margin="0 0 10 0"
                                                       VerticalAlignment="Center"
                                                       Text="Offset:"/>

                                            <TextBlock DockPanel.Dock="Right"
                                                       Width="40"
                                                       VerticalAlignment="Center"
                                                       Text="{Binding AutoSkipToScriptStartOffset, StringFormat={}{0:0.0}s}"
                                                       TextAlignment="Right"/>

                                            <Slider DockPanel.Dock="Left"
                                                    VerticalAlignment="Center"
                                                    material:SliderAssist.OnlyShowFocusVisualWhileDragging="True"
                                                    IsSnapToTickEnabled="True"
                                                    Maximum="10"
                                                    Minimum="0"
                                                    TickFrequency="0.1"
                                                    Value="{Binding AutoSkipToScriptStartOffset}"/>
                                        </DockPanel>
                                    </StackPanel>
                                </Grid>
                            </material:PopupBox>

                            <Menu Background="{DynamicResource MaterialDesignPaper}">
                                <MenuItem Style="{StaticResource MaterialDesignToolBarMenuItem}" ToolTip="Media loop">
                                    <MenuItem.Icon>
                                        <TextBlock HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   FontSize="14"
                                                   FontWeight="Bold"
                                                   Text="AB">
                                            <TextBlock.Resources>
                                                <Style TargetType="{x:Type TextBlock}">
                                                    <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Value="True">
                                                            <DataTrigger.Binding>
                                                                <MultiBinding Converter="{StaticResource BooleanAllConverter}">
                                                                    <Binding Converter="{StaticResource InvertedNullableToBooleanConverter}" Path="MediaLoopSegment.StartPosition"/>
                                                                    <Binding Converter="{StaticResource InvertedNullableToBooleanConverter}" Path="MediaLoopSegment.EndPosition"/>
                                                                </MultiBinding>
                                                            </DataTrigger.Binding>
                                                            <DataTrigger.Setters>
                                                                <Setter Property="Foreground" Value="{DynamicResource MaterialDesignSuccessBrush}"/>
                                                            </DataTrigger.Setters>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Resources>
                                        </TextBlock>
                                    </MenuItem.Icon>

                                    <MenuItem Padding="8"
                                              Command="{s:Action ClearMediaLoop}"
                                              Header="Clear">
                                        <MenuItem.IsEnabled>
                                            <MultiBinding Converter="{StaticResource BooleanOrConverter}">
                                                <Binding Converter="{StaticResource InvertedNullableToBooleanConverter}" Path="MediaLoopSegment.StartPosition"/>
                                                <Binding Converter="{StaticResource InvertedNullableToBooleanConverter}" Path="MediaLoopSegment.EndPosition"/>
                                            </MultiBinding>
                                        </MenuItem.IsEnabled>
                                        <MenuItem.Icon>
                                            <material:PackIcon Width="16"
                                                               Height="16"
                                                               Kind="WindowClose"/>
                                        </MenuItem.Icon>
                                    </MenuItem>

                                    <MenuItem Padding="8"
                                              Command="{s:Action SetMediaLoopStartFromMediaPosition}"
                                              Header="Set start">
                                        <MenuItem.Icon>
                                            <material:PackIcon Width="16"
                                                               Height="16"
                                                               Kind="ContainStart"/>
                                        </MenuItem.Icon>
                                    </MenuItem>

                                    <MenuItem Padding="8"
                                              Command="{s:Action SetMediaLoopEndFromMediaPosition}"
                                              Header="Set end">
                                        <MenuItem.Icon>
                                            <material:PackIcon Width="16"
                                                               Height="16"
                                                               Kind="ContainEnd"/>
                                        </MenuItem.Icon>
                                    </MenuItem>

                                    <MenuItem Padding="8"
                                              Command="{s:Action SetMediaLoopFromCurrentChapter}"
                                              Header="Repeat chapter">
                                        <MenuItem.Icon>
                                            <material:PackIcon Width="16"
                                                               Height="16"
                                                               Kind="Contain"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                </MenuItem>
                            </Menu>
                        </StackPanel>
                    </DockPanel>
                </Expander.Header>

                <StackPanel Margin="20 15 20 15">
                    <DockPanel Margin="0 0 0 10" LastChildFill="True">
                        <TextBlock DockPanel.Dock="Left"
                                   Margin="0 0 10 0"
                                   VerticalAlignment="Center"
                                   Text="File:"/>

                        <TextBox DockPanel.Dock="Left"
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 Margin="5 -10 0 0"
                                 VerticalAlignment="Center"
                                 material:HintAssist.Hint="{Binding MediaResource.Source}"
                                 IsReadOnly="True"
                                 Text="{Binding MediaResource.Name, Mode=OneWay}"/>
                    </DockPanel>
                    <DockPanel LastChildFill="False">
                        <TextBlock DockPanel.Dock="Left"
                                   Margin="0 0 10 0"
                                   VerticalAlignment="Center"
                                   Text="Offset:"/>

                        <metro:NumericUpDown DockPanel.Dock="Left"
                                             Width="100"
                                             Interval="0.1"
                                             StringFormat="{}{0:F2}s"
                                             TrackMouseWheelWhenMouseOver="True"
                                             ValueChanged="{s:Action OnOffsetValueChanged}"
                                             Value="{Binding GlobalOffset}"/>
                    </DockPanel>
                </StackPanel>
            </Expander>
        </material:Card>

        <controls:KeyframesHeatmap Height="36"
                                   Margin="0 0 0 4"
                                   Panel.ZIndex="-1"
                                   BucketCount="{Binding HeatmapBucketCount}"
                                   CombineHeat="{Binding HeatmapCombineHeat}"
                                   Cursor="Hand"
                                   EnablePreview="{Binding HeatmapEnablePreview}"
                                   InvertY="{Binding HeatmapInvertY}"
                                   Keyframes="{Binding AxisKeyframes, Mode=OneWay}"
                                   Position="{Binding MediaPosition, Mode=OneWay}"
                                   SeekRequest="{s:Action OnSeekRequest}"
                                   Settings="{Binding AxisSettings, Mode=OneWay}"
                                   ShowRange="{Binding HeatmapShowRange}"
                                   Duration="{Binding MediaDuration, Mode=OneWay}">
            <controls:KeyframesHeatmap.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Show script range"
                              IsCheckable="True"
                              IsChecked="{Binding HeatmapShowRange}"/>
                    <MenuItem Header="Enable script preview"
                              IsCheckable="True"
                              IsChecked="{Binding HeatmapEnablePreview}"/>
                    <MenuItem Header="Combine script heat"
                              IsCheckable="True"
                              IsChecked="{Binding HeatmapCombineHeat}"/>
                    <MenuItem Header="Invert Y"
                              IsCheckable="True"
                              IsChecked="{Binding HeatmapInvertY}"/>
                    <Separator/>
                    <MenuItem Header="Quality" IsEnabled="False"/>
                    <MenuItem material:RippleAssist.IsDisabled="True">
                        <MenuItem.Icon>
                            <TextBlock Padding="0"
                                       FontSize="10"
                                       Text="{Binding HeatmapBucketCount}"/>
                        </MenuItem.Icon>
                        <MenuItem.HeaderTemplate>
                            <DataTemplate>
                                <Slider material:SliderAssist.OnlyShowFocusVisualWhileDragging="True"
                                        Maximum="{Binding Source={x:Static controls:KeyframesHeatmap.MaxBucketCount}}"
                                        Minimum="100"
                                        Value="{Binding PlacementTarget.DataContext.HeatmapBucketCount, RelativeSource={RelativeSource FindAncestor, AncestorType=ContextMenu}}"/>
                            </DataTemplate>
                        </MenuItem.HeaderTemplate>
                    </MenuItem>
                    <Separator/>
                </ContextMenu>
            </controls:KeyframesHeatmap.ContextMenu>
        </controls:KeyframesHeatmap>

        <controls:MarkersPreview Height="18"
                                 Margin="0 0 0 20"
                                 Panel.ZIndex="-1"
                                 Bookmarks="{Binding AxisBookmarks, Mode=OneWay}"
                                 Chapters="{Binding AxisChapters, Mode=OneWay}"
                                 Position="{Binding MediaPosition, Mode=OneWay}"
                                 SeekRequest="{s:Action OnSeekRequest}"
                                 Duration="{Binding MediaDuration, Mode=OneWay}"/>
        <material:Card Margin="0 0 0 10" material:ShadowAssist.ShadowDepth="Depth1">
            <controls:NonReloadingTabControl ItemsSource="{Binding AxisModels}">
                <TabControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Width="46" Height="36">
                            <TextBlock HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Text="{Binding Key}">
                                <TextBlock.Resources>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBodyDisabledBrush}"/>
                                        <Setter Property="FontWeight" Value="Medium"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Value.Script, Converter={StaticResource InvertedNullableToBooleanConverter}}" Value="True">
                                                <Setter Property="Foreground" Value="{DynamicResource InvertedPrimaryHueDarkBrush}"/>
                                                <Setter Property="FontWeight" Value="Black"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Value.Settings.BypassScript}" Value="True">
                                                <Setter Property="Foreground" Value="{DynamicResource MaterialDesignErrorBrush}"/>
                                                <Setter Property="FontWeight" Value="Black"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Resources>
                            </TextBlock>

                            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Bottom">
                                <Border Margin="8 0 8 0"
                                        Padding="0 0 0 4"
                                        Background="Transparent"
                                        ToolTipService.HorizontalOffset="8"
                                        ToolTipService.InitialShowDelay="750"
                                        ToolTipService.Placement="Right"
                                        ToolTipService.VerticalOffset="-42">
                                    <Border.ToolTip>
                                        <StackPanel Typography.Capitals="AllSmallCaps">
                                            <TextBlock FontSize="13">
                                                <Run FontWeight="Bold" Text="Link axis:"/>
                                                <Run>
                                                    <Run.Resources>
                                                        <Style TargetType="{x:Type Run}">
                                                            <Setter Property="Text" Value="Disabled"/>
                                                            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignPaper}"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Value.Settings.LinkAxis, Converter={StaticResource InvertedNullableToBooleanConverter}}" Value="True">
                                                                    <Setter Property="Text" Value="Enabled"/>
                                                                    <Setter Property="Foreground" Value="{DynamicResource MaterialDesignLightSuccessBrush}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Value.Settings.LinkAxisHasPriority}" Value="True">
                                                                    <Setter Property="Text" Value="Override"/>
                                                                    <Setter Property="Foreground" Value="{DynamicResource MaterialDesignLightErrorBrush}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Run.Resources>
                                                </Run>
                                            </TextBlock>

                                            <TextBlock Margin="0 -5 0 0" FontSize="13">
                                                <Run FontWeight="Bold" Text="Motion provider:"/>
                                                <Run>
                                                    <Run.Resources>
                                                        <Style TargetType="{x:Type Run}">
                                                            <Setter Property="Text" Value="Disabled"/>
                                                            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignPaper}"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Value.Settings.SelectedMotionProvider, Converter={StaticResource InvertedNullableToBooleanConverter}}" Value="True">
                                                                    <Setter Property="Text" Value="Enabled"/>
                                                                    <Setter Property="Foreground" Value="{DynamicResource MaterialDesignLightSuccessBrush}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Value="True">
                                                                    <DataTrigger.Binding>
                                                                        <MultiBinding Converter="{StaticResource MotionProviderOverridesScriptConverter}">
                                                                            <Binding Path="Value.Script"/>
                                                                            <Binding Path="Value.Settings.SelectedMotionProvider"/>
                                                                            <Binding Path="Value.Settings.MotionProviderBlend"/>
                                                                        </MultiBinding>
                                                                    </DataTrigger.Binding>
                                                                    <Setter Property="Text" Value="Override"/>
                                                                    <Setter Property="Foreground" Value="{DynamicResource MaterialDesignLightErrorBrush}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Value.Settings.BypassMotionProvider}" Value="True">
                                                                    <Setter Property="Text" Value="Bypass"/>
                                                                    <Setter Property="Foreground" Value="{DynamicResource MaterialDesignPaper}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Run.Resources>
                                                </Run>
                                            </TextBlock>

                                            <TextBlock Margin="0 -5 0 0" FontSize="13">
                                                <Run FontWeight="Bold" Text="Speed limit:"/>
                                                <Run>
                                                    <Run.Resources>
                                                        <Style TargetType="{x:Type Run}">
                                                            <Setter Property="Text" Value="Disabled"/>
                                                            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignPaper}"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Value.Settings.SpeedLimitEnabled}" Value="True">
                                                                    <Setter Property="Text" Value="Enabled"/>
                                                                    <Setter Property="Foreground" Value="{DynamicResource MaterialDesignLightSuccessBrush}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Value.State.IsSpeedLimited}" Value="True">
                                                                    <Setter Property="Text" Value="Active"/>
                                                                    <Setter Property="Foreground" Value="{DynamicResource MaterialDesignLightErrorBrush}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Run.Resources>
                                                </Run>
                                            </TextBlock>

                                            <TextBlock Margin="0 -5 0 0" FontSize="13">
                                                <Run FontWeight="Bold" Text="Smart limit:"/>
                                                <Run>
                                                    <Run.Resources>
                                                        <Style TargetType="{x:Type Run}">
                                                            <Setter Property="Text" Value="Disabled"/>
                                                            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignPaper}"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Value.Settings.SmartLimitInputAxis, Converter={StaticResource InvertedNullableToBooleanConverter}}" Value="True">
                                                                    <Setter Property="Text" Value="Enabled"/>
                                                                    <Setter Property="Foreground" Value="{DynamicResource MaterialDesignLightSuccessBrush}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Value.State.IsSmartLimited}" Value="True">
                                                                    <Setter Property="Text" Value="Active"/>
                                                                    <Setter Property="Foreground" Value="{DynamicResource MaterialDesignLightErrorBrush}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Run.Resources>
                                                </Run>
                                            </TextBlock>
                                        </StackPanel>
                                    </Border.ToolTip>

                                    <UniformGrid Columns="4">
                                        <material:PackIcon Width="6"
                                                           Height="6"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           Kind="Circle">
                                            <material:PackIcon.Resources>
                                                <Style TargetType="material:PackIcon">
                                                    <Setter Property="Foreground" Value="{DynamicResource MaterialDesignDivider}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Value.Settings.LinkAxis, Converter={StaticResource InvertedNullableToBooleanConverter}}" Value="True">
                                                            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignSuccessBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Value.Settings.LinkAxisHasPriority}" Value="True">
                                                            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignErrorBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </material:PackIcon.Resources>
                                        </material:PackIcon>

                                        <material:PackIcon Width="6"
                                                           Height="6"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           Kind="Circle">
                                            <material:PackIcon.Resources>
                                                <Style TargetType="material:PackIcon">
                                                    <Setter Property="Foreground" Value="{DynamicResource MaterialDesignDivider}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Value.Settings.SelectedMotionProvider, Converter={StaticResource InvertedNullableToBooleanConverter}}" Value="True">
                                                            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignSuccessBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Value="True">
                                                            <DataTrigger.Binding>
                                                                <MultiBinding Converter="{StaticResource MotionProviderOverridesScriptConverter}">
                                                                    <Binding Path="Value.Script"/>
                                                                    <Binding Path="Value.Settings.SelectedMotionProvider"/>
                                                                    <Binding Path="Value.Settings.MotionProviderBlend"/>
                                                                </MultiBinding>
                                                            </DataTrigger.Binding>
                                                            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignErrorBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Value.Settings.BypassMotionProvider}" Value="True">
                                                            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignDivider}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </material:PackIcon.Resources>
                                        </material:PackIcon>

                                        <material:PackIcon Width="6"
                                                           Height="6"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           Kind="Circle">
                                            <material:PackIcon.Resources>
                                                <Style TargetType="material:PackIcon">
                                                    <Setter Property="Foreground" Value="{DynamicResource MaterialDesignDivider}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Value.Settings.SpeedLimitEnabled}" Value="True">
                                                            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignSuccessBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Value.State.IsSpeedLimited}" Value="True">
                                                            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignErrorBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </material:PackIcon.Resources>
                                        </material:PackIcon>

                                        <material:PackIcon Width="6"
                                                           Height="6"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           Kind="Circle">
                                            <material:PackIcon.Resources>
                                                <Style TargetType="material:PackIcon">
                                                    <Setter Property="Foreground" Value="{DynamicResource MaterialDesignDivider}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Value.Settings.SmartLimitInputAxis, Converter={StaticResource InvertedNullableToBooleanConverter}}" Value="True">
                                                            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignSuccessBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Value.State.IsSmartLimited}" Value="True">
                                                            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignErrorBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </material:PackIcon.Resources>
                                        </material:PackIcon>
                                    </UniformGrid>
                                </Border>
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </TabControl.ItemTemplate>
                <TabControl.ContentTemplate>
                    <DataTemplate>
                        <DockPanel LastChildFill="True">
                            <Expander Style="{StaticResource MaterialDesignToolBarExpander}"
                                      material:ExpanderAssist.HorizontalHeaderPadding="0 0 6 0"
                                      Background="{DynamicResource MaterialDesignToolBarBackground}"
                                      IsExpanded="{Binding DataContext.AxisContentVisible, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}">
                                <Expander.Header>
                                    <DockPanel Height="36" LastChildFill="True">
                                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                                            <TextBlock Margin="0 0 10 0"
                                                       VerticalAlignment="Center"
                                                       FontSize="14"
                                                       FontWeight="Bold"
                                                       Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                       Text="{Binding Key.FriendlyName}"
                                                       Typography.Capitals="AllSmallCaps"/>
                                        </StackPanel>
                                        <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                                            <Menu Background="{DynamicResource MaterialDesignPaper}">
                                                <MenuItem Style="{StaticResource MaterialDesignToolBarMenuItem}" ToolTip="Script">
                                                    <MenuItem.Icon>
                                                        <material:PackIcon Width="19"
                                                                           Height="19"
                                                                           Kind="File"/>
                                                    </MenuItem.Icon>

                                                    <MenuItem Padding="8"
                                                              Command="{s:Action OnAxisOpenFolder}"
                                                              CommandParameter="{Binding Key}"
                                                              IsEnabled="{Binding Value.Script, Converter={StaticResource InvertedNullableToBooleanConverter}}">
                                                        <MenuItem.Header>
                                                            <DockPanel LastChildFill="True">
                                                                <Border DockPanel.Dock="Left"
                                                                        Width="36"
                                                                        Height="36">
                                                                    <material:PackIcon Width="16"
                                                                                       Height="16"
                                                                                       Kind="FolderOpen"/>
                                                                </Border>

                                                                <TextBlock DockPanel.Dock="Right" Text="Open folder"/>
                                                            </DockPanel>
                                                        </MenuItem.Header>
                                                    </MenuItem>
                                                    <MenuItem Padding="8"
                                                              Command="{s:Action OnAxisLoad}"
                                                              CommandParameter="{Binding Key}"
                                                              IsEnabled="{Binding DataContext.MediaResource, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}, Converter={StaticResource InvertedNullableToBooleanConverter}}">
                                                        <MenuItem.Header>
                                                            <DockPanel LastChildFill="True">
                                                                <Border DockPanel.Dock="Left"
                                                                        Width="36"
                                                                        Height="36">
                                                                    <material:PackIcon Width="16"
                                                                                       Height="16"
                                                                                       Kind="FileDownload"/>
                                                                </Border>

                                                                <TextBlock DockPanel.Dock="Right" Text="Load"/>
                                                            </DockPanel>
                                                        </MenuItem.Header>
                                                    </MenuItem>
                                                    <MenuItem Padding="8"
                                                              Command="{s:Action OnAxisClear}"
                                                              CommandParameter="{Binding Key}"
                                                              IsEnabled="{Binding Value.Script, Converter={StaticResource InvertedNullableToBooleanConverter}}">
                                                        <MenuItem.Header>
                                                            <DockPanel LastChildFill="True">
                                                                <Border DockPanel.Dock="Left"
                                                                        Width="36"
                                                                        Height="36">
                                                                    <material:PackIcon Width="16"
                                                                                       Height="16"
                                                                                       Kind="Close"/>
                                                                </Border>

                                                                <TextBlock DockPanel.Dock="Right" Text="Clear"/>
                                                            </DockPanel>
                                                        </MenuItem.Header>
                                                    </MenuItem>
                                                    <MenuItem Padding="8"
                                                              Command="{s:Action OnAxisReload}"
                                                              CommandParameter="{Binding Key}"
                                                              IsEnabled="{Binding DataContext.MediaResource, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}, Converter={StaticResource InvertedNullableToBooleanConverter}}">
                                                        <MenuItem.Header>
                                                            <DockPanel LastChildFill="True">
                                                                <Border DockPanel.Dock="Left"
                                                                        Width="36"
                                                                        Height="36">
                                                                    <material:PackIcon Width="16"
                                                                                       Height="16"
                                                                                       Kind="Reload"/>
                                                                </Border>

                                                                <TextBlock DockPanel.Dock="Right" Text="Reload"/>
                                                            </DockPanel>
                                                        </MenuItem.Header>
                                                    </MenuItem>
                                                </MenuItem>
                                            </Menu>

                                            <ToggleButton Style="{StaticResource MaterialDesignToolBarToggleButton}"
                                                          Checked="{s:Action OnInvertValueCheckedChanged}"
                                                          IsChecked="{Binding Value.Settings.InvertValue, Mode=OneWay}"
                                                          ToolTip="Invert"
                                                          Unchecked="{s:Action OnInvertValueCheckedChanged}">
                                                <material:PackIcon Width="20"
                                                                   Height="20"
                                                                   Kind="FlipVertical"
                                                                   Opacity=".56"/>
                                                <material:ToggleButtonAssist.OnContent>
                                                    <material:PackIcon Width="20"
                                                                       Height="20"
                                                                       Foreground="{DynamicResource MaterialDesignSuccessBrush}"
                                                                       Kind="FlipVertical"/>
                                                </material:ToggleButtonAssist.OnContent>
                                            </ToggleButton>

                                            <material:PopupBox DockPanel.Dock="Left"
                                                               Style="{StaticResource MaterialDesignToolBarPopupBox}"
                                                               StaysOpen="True"
                                                               ToolTip="Bypass">
                                                <material:PopupBox.ToggleContent>
                                                    <material:PackIcon Width="21"
                                                                       Height="21"
                                                                       Kind="MotionPauseOutline">
                                                        <material:PackIcon.Style>
                                                            <Style TargetType="material:PackIcon">
                                                                <Style.Triggers>
                                                                    <DataTrigger Value="True">
                                                                        <DataTrigger.Binding>
                                                                            <MultiBinding Converter="{StaticResource BooleanOrConverter}">
                                                                                <Binding Path="Value.Settings.BypassScript"/>
                                                                                <Binding Path="Value.Settings.BypassMotionProvider"/>
                                                                                <Binding Path="Value.Settings.BypassTransition"/>
                                                                            </MultiBinding>
                                                                        </DataTrigger.Binding>

                                                                        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignErrorBrush}"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </material:PackIcon.Style>
                                                    </material:PackIcon>
                                                </material:PopupBox.ToggleContent>
                                                <Grid Margin="10">
                                                    <StackPanel>
                                                        <Button Style="{StaticResource MaterialDesignPaperButton}"
                                                                Margin="0 0 0 15"
                                                                Click="{s:Action OnBypassAll}"
                                                                Content="Bypass all"
                                                                Typography.Capitals="AllSmallCaps"/>

                                                        <TextBlock VerticalAlignment="Center"
                                                                   FontSize="12"
                                                                   FontWeight="Bold"
                                                                   Text="Bypass:"
                                                                   Typography.Capitals="AllSmallCaps"/>

                                                        <DockPanel Margin="0 0 0 5" LastChildFill="True">
                                                            <ToggleButton DockPanel.Dock="Right"
                                                                          Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                                                          IsChecked="{Binding Value.Settings.BypassScript}"/>
                                                            <TextBlock DockPanel.Dock="Left"
                                                                       VerticalAlignment="Center"
                                                                       Text="Script:"/>
                                                        </DockPanel>
                                                        <DockPanel Margin="0 0 0 5" LastChildFill="True">
                                                            <ToggleButton DockPanel.Dock="Right"
                                                                          Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                                                          IsChecked="{Binding Value.Settings.BypassMotionProvider}"/>
                                                            <TextBlock DockPanel.Dock="Left"
                                                                       Margin="0 0 10 0"
                                                                       VerticalAlignment="Center"
                                                                       Text="Motion provider:"/>
                                                        </DockPanel>
                                                        <DockPanel LastChildFill="True">
                                                            <ToggleButton DockPanel.Dock="Right"
                                                                          Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                                                          IsChecked="{Binding Value.Settings.BypassTransition}"/>
                                                            <TextBlock DockPanel.Dock="Left"
                                                                       Margin="0 0 10 0"
                                                                       VerticalAlignment="Center"
                                                                       Text="Custom transition:"/>
                                                        </DockPanel>
                                                    </StackPanel>
                                                </Grid>
                                            </material:PopupBox>


                                            <material:PopupBox DockPanel.Dock="Left"
                                                               Style="{StaticResource MaterialDesignToolBarPopupBox}"
                                                               StaysOpen="True"
                                                               ToolTip="Link script">
                                                <material:PopupBox.ToggleContent>
                                                    <material:PackIcon Width="20"
                                                                       Height="20"
                                                                       Kind="LinkVariant">
                                                        <material:PackIcon.Style>
                                                            <Style TargetType="material:PackIcon">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Value.Settings.LinkAxis, Converter={StaticResource InvertedNullableToBooleanConverter}}" Value="True">
                                                                        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignSuccessBrush}"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Value.Settings.LinkAxisHasPriority}" Value="True">
                                                                        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignSuccessBrush}"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </material:PackIcon.Style>
                                                    </material:PackIcon>
                                                </material:PopupBox.ToggleContent>
                                                <Grid Width="100" Margin="10">
                                                    <StackPanel>
                                                        <DockPanel LastChildFill="True">
                                                            <TextBlock DockPanel.Dock="Left"
                                                                       Margin="0 0 10 0"
                                                                       VerticalAlignment="Center"
                                                                       Text="Target:"/>
                                                            <ComboBox DockPanel.Dock="Left"
                                                                      ItemsSource="{Binding Source={x:Static common:DeviceAxis.All}}"
                                                                      SelectedItem="{Binding Value.Settings.LinkAxis}"
                                                                      Width="50"
                                                                      Margin="0 0 10 0"
                                                                      material:TextFieldAssist.HasClearButton="True"
                                                                      SelectionChanged="{s:Action OnSelectedLinkAxisChanged}"/>
                                                        </DockPanel>
                                                        <DockPanel Margin="0 10 0 0" LastChildFill="False">
                                                            <CheckBox DockPanel.Dock="Left"
                                                                      Margin="0 0 5 0"
                                                                      Checked="{s:Action OnLinkAxisPriorityChanged}"
                                                                      Content="Priority"
                                                                      IsChecked="{Binding Value.Settings.LinkAxisHasPriority}"
                                                                      Unchecked="{s:Action OnLinkAxisPriorityChanged}"/>

                                                            <material:ColorZone DockPanel.Dock="Left"
                                                                                Width="14"
                                                                                Height="14"
                                                                                VerticalAlignment="Center"
                                                                                CornerRadius="7"
                                                                                Mode="PrimaryLight">
                                                                <material:ColorZone.ToolTip>
                                                                    <TextBlock>
                                                                        When enabled the link has priority<LineBreak/>
                                                                        over automatically loaded scripts</TextBlock>
                                                                </material:ColorZone.ToolTip>
                                                                <material:PackIcon Width="10"
                                                                                   Height="10"
                                                                                   HorizontalAlignment="Center"
                                                                                   VerticalAlignment="Center"
                                                                                   Kind="Help"/>
                                                            </material:ColorZone>
                                                        </DockPanel>
                                                    </StackPanel>
                                                </Grid>
                                            </material:PopupBox>

                                            <material:PopupBox DockPanel.Dock="Left"
                                                               Style="{StaticResource MaterialDesignToolBarPopupBox}"
                                                               StaysOpen="True"
                                                               ToolTip="Motion">
                                                <material:PopupBox.ToggleContent>
                                                    <material:PackIcon Width="20"
                                                                       Height="20"
                                                                       Kind="Motion">
                                                        <material:PackIcon.Style>
                                                            <Style TargetType="material:PackIcon">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Value.Settings.SelectedMotionProvider, Converter={StaticResource InvertedNullableToBooleanConverter}}" Value="True">
                                                                        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignSuccessBrush}"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </material:PackIcon.Style>
                                                    </material:PackIcon>
                                                </material:PopupBox.ToggleContent>
                                                <Grid Width="250" Margin="10 0 10 0">
                                                    <StackPanel>
                                                        <DockPanel LastChildFill="True">
                                                            <DockPanel DockPanel.Dock="Top"
                                                                       Margin="0 0 0 10"
                                                                       LastChildFill="True">
                                                                <TextBlock DockPanel.Dock="Left"
                                                                           Margin="0 0 10 0"
                                                                           VerticalAlignment="Center"
                                                                           Text="Motion provider:"/>
                                                                <ComboBox DockPanel.Dock="Left"
                                                                          ItemsSource="{Binding DataContext.MotionProviderManager.MotionProviderNames, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}"
                                                                          behaviours:ComboBoxAssist.PreviewSelectionChanged="{s:Action OnPreviewSelectedMotionProviderChanged}"
                                                                          material:TextFieldAssist.HasClearButton="True"
                                                                          SelectedValue="{Binding Value.Settings.SelectedMotionProvider, UpdateSourceTrigger=Explicit}"/>
                                                            </DockPanel>

                                                            <material:Card DockPanel.Dock="Top" material:ShadowAssist.ShadowDepth="Depth1">
                                                                <Expander>
                                                                    <Expander.Header>
                                                                        <TextBlock Margin="12 0 0 0"
                                                                                   VerticalAlignment="Center"
                                                                                   FontSize="14"
                                                                                   FontWeight="Bold"
                                                                                   Text="Common settings"
                                                                                   Typography.Capitals="AllSmallCaps"/>
                                                                    </Expander.Header>

                                                                    <StackPanel Margin="10">
                                                                        <DockPanel DockPanel.Dock="Top">

                                                                            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                                                                                <TextBlock Margin="0 0 5 0"
                                                                                           VerticalAlignment="Center"
                                                                                           FontSize="12"
                                                                                           FontWeight="Bold"
                                                                                           Text="Blend values"
                                                                                           Typography.Capitals="AllSmallCaps"/>

                                                                                <material:ColorZone DockPanel.Dock="Left"
                                                                                                    Width="14"
                                                                                                    Height="14"
                                                                                                    VerticalAlignment="Center"
                                                                                                    CornerRadius="7"
                                                                                                    Mode="PrimaryLight">
                                                                                    <material:ColorZone.ToolTip>
                                                                                        <TextBlock>
                                                                                            When a script is loaded for this axis<LineBreak/>
                                                                                            and motion provider is running<LineBreak/>
                                                                                            the output value will be a blend of those two<LineBreak/>
                                                                                            based on the slider below</TextBlock>
                                                                                    </material:ColorZone.ToolTip>
                                                                                    <material:PackIcon Width="10"
                                                                                                       Height="10"
                                                                                                       HorizontalAlignment="Center"
                                                                                                       VerticalAlignment="Center"
                                                                                                       Kind="Help"/>
                                                                                </material:ColorZone>
                                                                            </StackPanel>

                                                                            <Slider DockPanel.Dock="Top"
                                                                                    material:SliderAssist.OnlyShowFocusVisualWhileDragging="True"
                                                                                    IsSnapToTickEnabled="True"
                                                                                    Maximum="100"
                                                                                    Minimum="0"
                                                                                    TickFrequency="1"
                                                                                    Value="{Binding Value.Settings.MotionProviderBlend}"/>

                                                                            <DockPanel DockPanel.Dock="Top" LastChildFill="False">
                                                                                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                                                                                    <TextBlock Margin="0 0 5 0"
                                                                                               VerticalAlignment="Center"
                                                                                               Text="Script:"
                                                                                               TextAlignment="Center"/>

                                                                                    <TextBlock VerticalAlignment="Center"
                                                                                               Text="{Binding Value.Settings.MotionProviderBlend, Converter={StaticResource InvertValueConverter}, ConverterParameter=100, StringFormat={}{0:0}%}"
                                                                                               TextAlignment="Center"/>
                                                                                </StackPanel>

                                                                                <StackPanel DockPanel.Dock="Right"
                                                                                            Width="90"
                                                                                            Orientation="Horizontal">
                                                                                    <TextBlock Margin="0 0 5 0"
                                                                                               VerticalAlignment="Center"
                                                                                               Text="Provider:"
                                                                                               TextAlignment="Center"/>

                                                                                    <TextBlock VerticalAlignment="Center"
                                                                                               Text="{Binding Value.Settings.MotionProviderBlend, StringFormat={}{0:0}%}"
                                                                                               TextAlignment="Center"/>
                                                                                </StackPanel>
                                                                            </DockPanel>
                                                                        </DockPanel>

                                                                        <Separator/>

                                                                        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                                                                            <TextBlock Margin="0 0 5 0"
                                                                                       VerticalAlignment="Center"
                                                                                       FontSize="12"
                                                                                       FontWeight="Bold"
                                                                                       Text="Gap fill"
                                                                                       Typography.Capitals="AllSmallCaps"/>

                                                                            <ToggleButton DockPanel.Dock="Right"
                                                                                          Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                                                                          Height="14"
                                                                                          VerticalAlignment="Center"
                                                                                          IsChecked="{Binding Value.Settings.MotionProviderFillGaps}"/>
                                                                        </StackPanel>

                                                                        <DockPanel LastChildFill="False">
                                                                            <DockPanel DockPanel.Dock="Left">
                                                                                <TextBlock DockPanel.Dock="Left"
                                                                                           VerticalAlignment="Center"
                                                                                           Text="Fill atleast"/>

                                                                                <metro:NumericUpDown DockPanel.Dock="Left"
                                                                                                     MinWidth="30"
                                                                                                     Margin="5 0 5 0"
                                                                                                     Interval="1"
                                                                                                     Minimum="0"
                                                                                                     StringFormat="{}{0:0}s"
                                                                                                     Value="{Binding Value.Settings.MotionProviderMinimumGapDuration}"/>

                                                                                <TextBlock DockPanel.Dock="Left"
                                                                                           VerticalAlignment="Center"
                                                                                           Text="{Binding Key, StringFormat={}{0} script gaps}"/>
                                                                            </DockPanel>
                                                                        </DockPanel>

                                                                        <Separator/>

                                                                        <DockPanel Margin="0 0 0 10"
                                                                                   LastChildFill="False"
                                                                                   Visibility="{Binding Value.Settings.UpdateMotionProviderWithAxis, Converter={StaticResource NullVisibilityConverter}}">
                                                                            <TextBlock DockPanel.Dock="Left"
                                                                                       VerticalAlignment="Center"
                                                                                       Text="{Binding Value.Settings.UpdateMotionProviderWithAxis, StringFormat={}Match {0} speed}"/>

                                                                            <ToggleButton DockPanel.Dock="Right"
                                                                                          Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                                                                          IsChecked="{Binding Value.Settings.MotionProviderSpeedLimitWithAxis}"/>
                                                                        </DockPanel>

                                                                        <TextBlock VerticalAlignment="Center"
                                                                                   FontSize="12"
                                                                                   FontWeight="Bold"
                                                                                   Text="Update when..."
                                                                                   Typography.Capitals="AllSmallCaps"/>

                                                                        <StackPanel Margin="0 5 0 0">
                                                                            <DockPanel LastChildFill="False">
                                                                                <TextBlock DockPanel.Dock="Left"
                                                                                           VerticalAlignment="Center"
                                                                                           Text="Media is paused"/>

                                                                                <ToggleButton DockPanel.Dock="Right"
                                                                                              Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                                                                              IsChecked="{Binding Value.Settings.UpdateMotionProviderWhenPaused}"/>
                                                                            </DockPanel>

                                                                            <DockPanel LastChildFill="False">
                                                                                <TextBlock DockPanel.Dock="Left"
                                                                                           VerticalAlignment="Center"
                                                                                           Text="{Binding Key, StringFormat={}{0} axis has no script}"/>

                                                                                <ToggleButton DockPanel.Dock="Right"
                                                                                              Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                                                                              IsChecked="{Binding Value.Settings.UpdateMotionProviderWithoutScript}"/>
                                                                            </DockPanel>

                                                                            <DockPanel LastChildFill="False">
                                                                                <ComboBox DockPanel.Dock="Left"
                                                                                          ItemsSource="{Binding Source={x:Static common:DeviceAxis.All}}"
                                                                                          SelectedItem="{Binding Value.Settings.UpdateMotionProviderWithAxis}"
                                                                                          Width="50"
                                                                                          material:TextFieldAssist.HasClearButton="True"
                                                                                          SelectionChanged="{s:Action OnUpdateMotionProviderWithAxisChanged}"/>

                                                                                <TextBlock DockPanel.Dock="Left"
                                                                                           Margin="5 0 0 0"
                                                                                           VerticalAlignment="Center"
                                                                                           Text="is moving"/>
                                                                            </DockPanel>
                                                                        </StackPanel>
                                                                    </StackPanel>
                                                                </Expander>
                                                            </material:Card>

                                                            <Separator DockPanel.Dock="Top" Margin="-10 0 -10 0"/>
                                                            <ContentControl DockPanel.Dock="Bottom">
                                                                <s:View.Model>
                                                                    <MultiBinding Converter="{StaticResource MotionProviderSelectorConverter}">
                                                                        <Binding Path="DataContext.MotionProviderManager" RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type UserControl}}"/>
                                                                        <Binding Path="Key"/>
                                                                        <Binding Path="Value.Settings.SelectedMotionProvider"/>
                                                                    </MultiBinding>
                                                                </s:View.Model>
                                                            </ContentControl>
                                                        </DockPanel>
                                                    </StackPanel>
                                                </Grid>
                                            </material:PopupBox>

                                            <material:PopupBox DockPanel.Dock="Left"
                                                               Style="{StaticResource MaterialDesignToolBarPopupBox}"
                                                               IsPopupOpen="False"
                                                               StaysOpen="True"
                                                               ToolTip="Smart limit">
                                                <material:PopupBox.ToggleContent>
                                                    <material:PackIcon Width="18"
                                                                       Height="18"
                                                                       Kind="ChartSnakeyVariant">
                                                        <material:PackIcon.Style>
                                                            <Style TargetType="material:PackIcon">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Value.Settings.SmartLimitInputAxis, Converter={StaticResource InvertedNullableToBooleanConverter}}" Value="True">
                                                                        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignSuccessBrush}"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </material:PackIcon.Style>
                                                    </material:PackIcon>
                                                </material:PopupBox.ToggleContent>

                                                <Grid Width="195" Margin="10">
                                                    <StackPanel>
                                                        <DockPanel LastChildFill="True">
                                                            <TextBlock DockPanel.Dock="Left"
                                                                       Margin="0 0 10 0"
                                                                       VerticalAlignment="Center"
                                                                       Text="Input axis:"/>

                                                            <ComboBox DockPanel.Dock="Left"
                                                                      ItemsSource="{Binding Source={x:Static common:DeviceAxis.All}}"
                                                                      SelectedItem="{Binding Value.Settings.SmartLimitInputAxis}"
                                                                      material:TextFieldAssist.HasClearButton="True"
                                                                      SelectionChanged="{s:Action OnSelectedSmartLimitInputAxisChanged}"/>
                                                        </DockPanel>

                                                        <controls:SmartLimitPreview x:Name="SmartLimitPreview"
                                                                                    Margin="0 0 0 20"
                                                                                    HorizontalAlignment="Center"
                                                                                    Points="{Binding Value.Settings.SmartLimitPoints}">
                                                            <controls:SmartLimitPreview.Triggers>
                                                                <EventTrigger RoutedEvent="Loaded">
                                                                    <BeginStoryboard>
                                                                        <Storyboard RepeatBehavior="Forever">
                                                                            <DoubleAnimation BeginTime="0:0:0"
                                                                                             Storyboard.TargetProperty="Input"
                                                                                             From="0"
                                                                                             To="0"
                                                                                             Duration="0:0:0.500"/>
                                                                            <DoubleAnimation BeginTime="0:0:0.500"
                                                                                             Storyboard.TargetProperty="Input"
                                                                                             From="0"
                                                                                             To="100"
                                                                                             Duration="0:0:3"/>
                                                                            <DoubleAnimation BeginTime="0:0:3.500"
                                                                                             Storyboard.TargetProperty="Input"
                                                                                             From="100"
                                                                                             To="100"
                                                                                             Duration="0:0:0.500"/>
                                                                            <DoubleAnimation BeginTime="0:0:4"
                                                                                             Storyboard.TargetProperty="Input"
                                                                                             From="100"
                                                                                             To="0"
                                                                                             Duration="0:0:3"/>
                                                                        </Storyboard>
                                                                    </BeginStoryboard>
                                                                </EventTrigger>
                                                            </controls:SmartLimitPreview.Triggers>
                                                        </controls:SmartLimitPreview>

                                                        <DockPanel LastChildFill="True">
                                                            <TextBlock DockPanel.Dock="Left"
                                                                       Margin="0 0 10 0"
                                                                       VerticalAlignment="Center"
                                                                       Text="Mode:"/>

                                                            <ComboBox DockPanel.Dock="Left"
                                                                      ItemsSource="{Binding Source={ui:EnumBindingSource {x:Type vm:SmartLimitMode}}}"
                                                                      SelectedItem="{Binding Value.Settings.SmartLimitMode}"
                                                                      material:TextFieldAssist.HasClearButton="True"/>
                                                        </DockPanel>

                                                        <DockPanel LastChildFill="True">
                                                            <DockPanel.Resources>
                                                                <Style TargetType="{x:Type DockPanel}">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Value.Settings.SmartLimitMode}" Value="Value">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </DockPanel.Resources>

                                                            <TextBlock DockPanel.Dock="Left"
                                                                       Margin="0 0 10 0"
                                                                       VerticalAlignment="Center"
                                                                       Text="Target value:"/>

                                                            <metro:NumericUpDown Interval="0.01"
                                                                                 Maximum="1"
                                                                                 Minimum="0"
                                                                                 StringFormat="P0"
                                                                                 Value="{Binding Value.Settings.SmartLimitTargetValue}"/>
                                                        </DockPanel>

                                                        <TextBlock Margin="0 10 0 0"
                                                                   VerticalAlignment="Center"
                                                                   FontSize="12"
                                                                   FontWeight="Bold"
                                                                   Text="when..."
                                                                   Typography.Capitals="AllSmallCaps"/>

                                                        <DockPanel>
                                                            <TextBlock DockPanel.Dock="Left"
                                                                       Margin="0 0 5 0"
                                                                       VerticalAlignment="Center"
                                                                       Text="{Binding Value.Settings.SmartLimitInputAxis}"/>

                                                            <TextBlock DockPanel.Dock="Left"
                                                                       Margin="0 0 5 0"
                                                                       VerticalAlignment="Center"
                                                                       Text="axis value is at:"/>

                                                            <TextBlock Text="{Binding Input, StringFormat={}{0:F0}%, ElementName=SmartLimitPreview}"/>
                                                        </DockPanel>

                                                        <TextBlock Margin="0 10 0 0"
                                                                   VerticalAlignment="Center"
                                                                   FontSize="12"
                                                                   FontWeight="Bold"
                                                                   Text="then..."
                                                                   Typography.Capitals="AllSmallCaps"/>

                                                        <DockPanel>
                                                            <TextBlock DockPanel.Dock="Left"
                                                                       Margin="0 0 5 0"
                                                                       VerticalAlignment="Center"
                                                                       Text="Limit"/>

                                                            <TextBlock DockPanel.Dock="Left"
                                                                       Margin="0 0 5 0"
                                                                       VerticalAlignment="Center"
                                                                       Text="{Binding Key}"/>

                                                            <TextBlock DockPanel.Dock="Left" VerticalAlignment="Center">
                                                                <TextBlock.Resources>
                                                                    <Style BasedOn="{StaticResource MaterialDesignTextBlock}" TargetType="{x:Type TextBlock}">
                                                                        <Setter Property="Text" Value="axis speed to:  "/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding Value.Settings.SmartLimitMode}" Value="Value">
                                                                                <Setter Property="Text" Value="axis range to:  &#x00B1;"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Resources>
                                                            </TextBlock>

                                                            <TextBlock DockPanel.Dock="Left"
                                                                       VerticalAlignment="Center"
                                                                       Text="{Binding Output, StringFormat={}{0:F0}%, ElementName=SmartLimitPreview}"/>
                                                        </DockPanel>

                                                        <DockPanel>
                                                            <DockPanel.Resources>
                                                                <Style TargetType="{x:Type DockPanel}">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Value.Settings.SmartLimitMode}" Value="Value">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </DockPanel.Resources>

                                                            <TextBlock DockPanel.Dock="Left"
                                                                       Margin="0 0 5 0"
                                                                       VerticalAlignment="Center"
                                                                       Text="from target value"/>
                                                        </DockPanel>
                                                    </StackPanel>
                                                </Grid>
                                            </material:PopupBox>

                                            <material:PopupBox DockPanel.Dock="Left"
                                                               Style="{StaticResource MaterialDesignToolBarPopupBox}"
                                                               StaysOpen="True"
                                                               ToolTip="Speed limit">
                                                <material:PopupBox.ToggleContent>
                                                    <material:PackIcon Width="22"
                                                                       Height="22"
                                                                       Kind="CarSpeedLimiter">
                                                        <material:PackIcon.Style>
                                                            <Style TargetType="material:PackIcon">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Value.Settings.SpeedLimitEnabled}" Value="True">
                                                                        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignSuccessBrush}"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </material:PackIcon.Style>
                                                    </material:PackIcon>
                                                </material:PopupBox.ToggleContent>
                                                <Grid Margin="10">
                                                    <StackPanel Width="200">
                                                        <StackPanel Margin="0 0 0 10" Orientation="Horizontal">
                                                            <TextBlock Width="50"
                                                                       Margin="0 0 10 0"
                                                                       VerticalAlignment="Center"
                                                                       Text="Enabled:"/>

                                                            <CheckBox Style="{StaticResource MaterialDesignSwitchToggleButton}" IsChecked="{Binding Value.Settings.SpeedLimitEnabled}"/>
                                                        </StackPanel>

                                                        <DockPanel LastChildFill="True">
                                                            <TextBlock DockPanel.Dock="Left"
                                                                       Margin="0 0 10 0"
                                                                       VerticalAlignment="Center"
                                                                       Text="Limit: "/>

                                                            <metro:NumericUpDown Interval="0.001"
                                                                                 Maximum="10"
                                                                                 Minimum="0.001"
                                                                                 StringFormat="{}{0:F3}s/stroke"
                                                                                 Value="{Binding Value.Settings.MaximumSecondsPerStroke}"/>
                                                        </DockPanel>
                                                    </StackPanel>
                                                </Grid>
                                            </material:PopupBox>

                                            <material:PopupBox DockPanel.Dock="Left"
                                                               Style="{StaticResource MaterialDesignToolBarPopupBox}"
                                                               StaysOpen="True"
                                                               ToolTip="Interpolation">
                                                <material:PopupBox.ToggleContent>
                                                    <material:PackIcon Width="20"
                                                                       Height="20"
                                                                       Kind="ChartBellCurve"/>
                                                </material:PopupBox.ToggleContent>
                                                <Grid Margin="10">
                                                    <StackPanel>
                                                        <controls:InterpolationPreview Width="160"
                                                                                       Height="80"
                                                                                       Margin="0 0 0 20"
                                                                                       InterpolationType="{Binding Value.Settings.InterpolationType}"/>

                                                        <DockPanel LastChildFill="True">
                                                            <TextBlock DockPanel.Dock="Left"
                                                                       Width="30"
                                                                       Margin="0 0 10 0"
                                                                       VerticalAlignment="Center"
                                                                       Text="Type:"/>

                                                            <ComboBox DockPanel.Dock="Left"
                                                                      ItemsSource="{Binding Source={ui:EnumBindingSource {x:Type common:InterpolationType}}}"
                                                                      SelectedItem="{Binding Value.Settings.InterpolationType}"/>
                                                        </DockPanel>
                                                    </StackPanel>
                                                </Grid>
                                            </material:PopupBox>

                                            <material:PopupBox DockPanel.Dock="Left"
                                                               Style="{StaticResource MaterialDesignToolBarPopupBox}"
                                                               StaysOpen="True"
                                                               ToolTip="Auto-home">
                                                <material:PopupBox.ToggleContent>
                                                    <material:PackIcon Width="22"
                                                                       Height="22"
                                                                       Kind="Home">
                                                        <material:PackIcon.Style>
                                                            <Style TargetType="material:PackIcon">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Value.Settings.AutoHomeEnabled}" Value="True">
                                                                        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignSuccessBrush}"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </material:PackIcon.Style>
                                                    </material:PackIcon>
                                                </material:PopupBox.ToggleContent>
                                                <Grid Width="200" Margin="10">
                                                    <StackPanel>
                                                        <DockPanel Margin="0 0 0 10" LastChildFill="False">
                                                            <TextBlock DockPanel.Dock="Left"
                                                                       Margin="0 0 10 0"
                                                                       VerticalAlignment="Center"
                                                                       Text="Enabled:"/>

                                                            <CheckBox DockPanel.Dock="Left"
                                                                      Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                                                      IsChecked="{Binding Value.Settings.AutoHomeEnabled}"/>
                                                        </DockPanel>

                                                        <DockPanel Margin="0 0 0 10" LastChildFill="False">
                                                            <TextBlock DockPanel.Dock="Left"
                                                                       Margin="0 0 10 0"
                                                                       VerticalAlignment="Center"
                                                                       Text="Auto-home inside script:"/>

                                                            <CheckBox DockPanel.Dock="Left"
                                                                      Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                                                      IsChecked="{Binding Value.Settings.AutoHomeInsideScript}"/>
                                                        </DockPanel>

                                                        <DockPanel>
                                                            <TextBlock DockPanel.Dock="Left"
                                                                       Margin="0 0 10 0"
                                                                       VerticalAlignment="Center"
                                                                       Text="Delay:"/>

                                                            <metro:NumericUpDown Interval="0.5"
                                                                                 Minimum="0"
                                                                                 StringFormat="{}{0:0.00}s"
                                                                                 Value="{Binding Value.Settings.AutoHomeDelay}"/>
                                                        </DockPanel>

                                                        <DockPanel>
                                                            <TextBlock DockPanel.Dock="Left"
                                                                       Margin="0 0 10 0"
                                                                       VerticalAlignment="Center"
                                                                       Text="Duration:"/>

                                                            <metro:NumericUpDown Interval="0.5"
                                                                                 Minimum="0"
                                                                                 StringFormat="{}{0:0.00}s"
                                                                                 Value="{Binding Value.Settings.AutoHomeDuration}"/>
                                                        </DockPanel>

                                                        <DockPanel>
                                                            <TextBlock DockPanel.Dock="Left"
                                                                       Margin="0 0 10 0"
                                                                       VerticalAlignment="Center"
                                                                       Text="Target value:"/>

                                                            <metro:NumericUpDown Interval="0.01"
                                                                                 Maximum="1"
                                                                                 Minimum="0"
                                                                                 StringFormat="P0"
                                                                                 Value="{Binding Value.Settings.AutoHomeTargetValue}"/>
                                                        </DockPanel>
                                                    </StackPanel>
                                                </Grid>
                                            </material:PopupBox>
                                        </StackPanel>
                                    </DockPanel>
                                </Expander.Header>

                                <StackPanel Margin="20 15 20 15">
                                    <DockPanel Margin="0 0 0 10" LastChildFill="True">
                                        <TextBlock DockPanel.Dock="Left"
                                                   Margin="0 0 10 0"
                                                   VerticalAlignment="Center"
                                                   Text="File:"/>

                                        <TextBox DockPanel.Dock="Right"
                                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                                 Margin="0 -10 0 0"
                                                 VerticalAlignment="Center"
                                                 material:HintAssist.Hint="{Binding Value.Script.Source}"
                                                 Drop="{s:Action OnAxisDrop}"
                                                 IsReadOnly="True"
                                                 PreviewDragEnter="{s:Action OnPreviewDragOver}"
                                                 PreviewDragOver="{s:Action OnPreviewDragOver}"
                                                 Text="{Binding Value.Script.Name, Mode=OneWay}"
                                                 TextAlignment="Left"/>
                                    </DockPanel>
                                    <DockPanel>
                                        <DockPanel DockPanel.Dock="Left"
                                                   Margin="0 0 20 0"
                                                   LastChildFill="True">
                                            <TextBlock DockPanel.Dock="Left"
                                                       Margin="0 0 10 0"
                                                       VerticalAlignment="Center"
                                                       Text="Offset:"/>

                                            <metro:NumericUpDown Width="100"
                                                                 Interval="0.1"
                                                                 StringFormat="{}{0:F2}s"
                                                                 TrackMouseWheelWhenMouseOver="True"
                                                                 ValueChanged="{s:Action OnOffsetValueChanged}"
                                                                 Value="{Binding Value.Settings.Offset}"/>
                                        </DockPanel>
                                        <DockPanel DockPanel.Dock="Left" LastChildFill="True">
                                            <TextBlock DockPanel.Dock="Left"
                                                       Margin="0 0 10 0"
                                                       VerticalAlignment="Center"
                                                       Text="Scale:"/>
                                            <TextBlock DockPanel.Dock="Right"
                                                       Width="50"
                                                       VerticalAlignment="Center"
                                                       Text="{Binding Value.Settings.ScriptScale, StringFormat={}{0:0}%}"
                                                       TextAlignment="Right"/>

                                            <Slider DockPanel.Dock="Left"
                                                    behaviours:SliderAssist.DefaultValueOnDoubleClick="100"
                                                    material:SliderAssist.OnlyShowFocusVisualWhileDragging="True"
                                                    IsSnapToTickEnabled="True"
                                                    Maximum="400"
                                                    Minimum="1"
                                                    TickFrequency="1"
                                                    ValueChanged="{s:Action OnScriptScaleSliderValueChanged}"
                                                    Value="{Binding Value.Settings.ScriptScale}"/>
                                        </DockPanel>
                                    </DockPanel>
                                </StackPanel>
                            </Expander>
                        </DockPanel>
                    </DataTemplate>
                </TabControl.ContentTemplate>
            </controls:NonReloadingTabControl>
        </material:Card>

        <material:Card material:ShadowAssist.ShadowDepth="Depth1">
            <Expander Style="{StaticResource MaterialDesignToolBarExpander}"
                      material:ExpanderAssist.HorizontalHeaderPadding="24 6 6 6"
                      Background="{DynamicResource MaterialDesignToolBarBackground}"
                      IsExpanded="{Binding ValuesContentVisible}">
                <Expander.Header>
                    <TextBlock Margin="12 0 0 0"
                               VerticalAlignment="Center"
                               FontSize="14"
                               FontWeight="Bold"
                               Text="Axis values"
                               Typography.Capitals="AllSmallCaps"/>
                </Expander.Header>

                <StackPanel Margin="15 15 15 15">
                    <ItemsControl ItemsSource="{Binding AxisStates}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="3" IsItemsHost="True"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemContainerStyle>
                            <Style>
                                <Setter Property="FrameworkElement.Margin" Value="5 0 5 0"/>
                            </Style>
                        </ItemsControl.ItemContainerStyle>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <DockPanel Margin="0" LastChildFill="True">
                                    <TextBlock DockPanel.Dock="Left"
                                               Width="15"
                                               Margin="0 0 5 0"
                                               Text="{Binding Key, Mode=OneWay}"/>
                                    <ProgressBar DockPanel.Dock="Right"
                                                 Width="155"
                                                 Height="10"
                                                 material:TransitionAssist.DisableTransitions="True"
                                                 Maximum="100"
                                                 Minimum="0"
                                                 Value="{Binding Value.Value, Mode=OneWay, Converter={StaticResource DoubleToPercentConverter}}">
                                        <ProgressBar.Style>
                                            <Style BasedOn="{StaticResource MaterialDesignLinearProgressBar}" TargetType="ProgressBar">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Value.InsideScript}" Value="False">
                                                        <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ProgressBar.Style>
                                    </ProgressBar>
                                </DockPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Expander>
        </material:Card>
    </StackPanel>
</UserControl>
