<UserControl x:Class="MultiFunPlayer.UI.Controls.Views.ScriptView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:s="https://github.com/canton7/Stylet"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:common="clr-namespace:MultiFunPlayer.Common" 
             xmlns:ui="clr-namespace:MultiFunPlayer.UI"
             xmlns:converters="clr-namespace:MultiFunPlayer.UI.Converters"
             xmlns:controls="clr-namespace:MultiFunPlayer.UI.Controls"
             xmlns:vm="clr-namespace:MultiFunPlayer.UI.Controls.ViewModels"
             xmlns:behaviours="clr-namespace:MultiFunPlayer.UI.Behaviours"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:ClassModifier="internal">
    <UserControl.Resources>
        <converters:DoubleToPercentConverter x:Key="DoubleToPercentConverter"/>
        <converters:MultiObjectToArrayConverter x:Key="MultiObjectToArrayConverter"/>
        <converters:MotionProviderSelectorConverter x:Key="MotionProviderSelectorConverter"/>
        <converters:MotionProviderOverridesScriptConverter x:Key="MotionProviderOverridesScriptConverter"/>
        <converters:InvertValueConverter x:Key="InvertValueConverter"/>
    </UserControl.Resources>
    <StackPanel Margin="0 0 0 20">
        <material:Card material:ShadowAssist.ShadowDepth="Depth1"
                      Margin="0 0 0 10">
            <Expander material:ExpanderAssist.HorizontalHeaderPadding="0 0 6 0"
                      Style="{StaticResource MaterialDesignToolBarExpander}"
                      Background="{DynamicResource MaterialDesignToolBarBackground}"
                      IsExpanded="{Binding MediaContentVisible}">
                <Expander.Header>
                    <DockPanel LastChildFill="True" 
                               Height="36">
                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                            <Button Click="{s:Action OnPlayPauseClick}"
                                    Padding="0"
                                    Width="36"
                                    Height="36">
                                <Button.Style>
                                    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource MaterialDesignToolBarButton}">
                                        <Setter Property="ToolTip" Value="Play"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsPlaying}" Value="True">
                                                <Setter Property="ToolTip" Value="Pause"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>

                                <material:PackIcon Width="28" 
                                                   Height="28"
                                                   VerticalAlignment="Center">
                                    <material:PackIcon.Style>
                                        <Style TargetType="material:PackIcon">
                                            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignSuccessBrush}"/>
                                            <Setter Property="Kind" Value="Play"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsPlaying}" Value="True">
                                                    <Setter Property="Foreground" Value="{DynamicResource MaterialDesignErrorBrush}"/>
                                                    <Setter Property="Kind" Value="Pause"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </material:PackIcon.Style>
                                </material:PackIcon>
                            </Button>

                            <material:PopupBox StaysOpen="True" 
                                               PlacementMode="BottomAndAlignRightEdges"
                                               Style="{StaticResource MaterialDesignToolBarPopupBox}"
                                               ToolTip="Sync settings">
                                <material:PopupBox.ToggleContent>
                                    <Grid Width="24" Height="24">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="24" />
                                            <RowDefinition Height="24" />
                                        </Grid.RowDefinitions>

                                        <material:PackIcon Grid.Row="0"
                                                           Width="16" 
                                                           Height="16"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Center"
                                                           Kind="FastForward">
                                            <material:PackIcon.Style>
                                                <Style TargetType="material:PackIcon">
                                                    <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsSyncing}" Value="True">
                                                            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignErrorBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </material:PackIcon.Style>
                                        </material:PackIcon>
                                        <ProgressBar Value="{Binding SyncProgress, Mode=OneWay}"
                                                         VerticalAlignment="Center"
                                                         Grid.Row="1"
                                                         Width="24"
                                                         Height="24"
                                                         Margin="0 -24 0 24">
                                            <ProgressBar.Style>
                                                <Style TargetType="ProgressBar" BasedOn="{StaticResource MaterialDesignCircularProgressBar}">
                                                    <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsSyncing}" Value="True">
                                                            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignErrorBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ProgressBar.Style>
                                        </ProgressBar>
                                    </Grid>
                                </material:PopupBox.ToggleContent>

                                <Grid Width="250" Margin="10">
                                    <StackPanel Orientation="Vertical">
                                        <DockPanel LastChildFill="True">
                                            <TextBlock DockPanel.Dock="Left" 
                                                       Text="Duration:" 
                                                       Margin="0 0 10 0"
                                                       VerticalAlignment="Center"/>
                                            <TextBlock DockPanel.Dock="Right" 
                                                       Text="{Binding SyncSettings.Duration, StringFormat={}{0:F2}s}"
                                                       Margin="10 0 0 0"
                                                       VerticalAlignment="Center"/>
                                            <Slider DockPanel.Dock="Right"
                                                    Value="{Binding SyncSettings.Duration}"
                                                    Minimum="0.5" 
                                                    Maximum="8"
                                                    TickFrequency="0.5"
                                                    VerticalAlignment="Center"
                                                    IsSnapToTickEnabled="True"
                                                    material:SliderAssist.OnlyShowFocusVisualWhileDragging="True"/>
                                        </DockPanel>
                                        
                                        <DockPanel LastChildFill="False"
                                                   Margin="0 10 0 0">
                                            <TextBlock DockPanel.Dock="Left"
                                                       Text="Sync when:"
                                                       Typography.Capitals="AllSmallCaps"
                                                       FontWeight="Bold"
                                                       Margin="0 0 5 0"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Left"/>
                                            <material:ColorZone DockPanel.Dock="Left"
                                                                VerticalAlignment="Center"
                                                                CornerRadius="7"
                                                                Mode="Custom"
                                                                Background="{DynamicResource MaterialDesignWarningBrush}"
                                                                Width="14"
                                                                Height="14">
                                                <material:ColorZone.ToolTip>
                                                    <TextBlock>
                                                        The sync feature is there to prevent<LineBreak/>sudden unwanted motion.<LineBreak/>
                                                        These settings are for advanced usage only.
                                                    </TextBlock>
                                                </material:ColorZone.ToolTip>
                                                <material:PackIcon Kind="ExclamationBold"
                                                                   Foreground="Black"
                                                                   Width="10"
                                                                   Height="10"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"/>
                                            </material:ColorZone>
                                        </DockPanel>
                                        <DockPanel LastChildFill="False" Margin="0 5 0 0">
                                            <TextBlock DockPanel.Dock="Left" Text="Media resource changed:"/>
                                            <ToggleButton DockPanel.Dock="Right" IsChecked="{Binding SyncSettings.SyncOnMediaResourceChanged}"/>
                                        </DockPanel>

                                        <DockPanel LastChildFill="False" Margin="0 5 0 0">
                                            <TextBlock DockPanel.Dock="Left" Text="Media play/pause:"/>
                                            <ToggleButton DockPanel.Dock="Right" IsChecked="{Binding SyncSettings.SyncOnMediaPlayPause}"/>
                                        </DockPanel>

                                        <DockPanel LastChildFill="False" Margin="0 5 0 0">
                                            <TextBlock DockPanel.Dock="Left" Text="Seek:"/>
                                            <ToggleButton DockPanel.Dock="Right" IsChecked="{Binding SyncSettings.SyncOnSeek}"/>
                                        </DockPanel>

                                        <DockPanel LastChildFill="False" Margin="0 5 0 0">
                                            <TextBlock DockPanel.Dock="Left" Text="Auto-home start/end:"/>
                                            <ToggleButton DockPanel.Dock="Right" IsChecked="{Binding SyncSettings.SyncOnAutoHomeStartEnd}"/>
                                        </DockPanel>
                                    </StackPanel>
                                </Grid>
                            </material:PopupBox>
                        </StackPanel>
                        <StackPanel DockPanel.Dock="Left" 
                                Orientation="Horizontal">
                            <Button Click="{s:Action OnOpenMediaLocation}" 
                                    Style="{StaticResource MaterialDesignToolBarButton}"
                                    IsEnabled="{Binding MediaResource, Converter={StaticResource InvertedNullableToBooleanConverter}}"
                                    ToolTip="Open media location"
                                    Padding="8">
                                <material:PackIcon Kind="FolderOpen" Height="19" Width="19"/>
                            </Button>

                            <Button Style="{StaticResource MaterialDesignToolBarButton}"
                                    ToolTip="Script repositories"
                                    Padding="8"
                                    Command="{x:Static material:DialogHost.OpenDialogCommand}">
                                <material:PackIcon Kind="DatabaseSearch" Height="19" Width="19"/>

                                <Button.CommandParameter>
                                    <Grid Margin="20" MinWidth="100"
                                          s:View.ActionTarget="{Binding}">
                                        <TextBlock Text="Script repositories" 
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Top"
                                                   Margin="0 -12 -15 0"
                                                   FontSize="14"
                                                   FontWeight="Bold"
                                                   Typography.Capitals="AllSmallCaps"/>
                                        
                                        <Button DockPanel.Dock="Top"
                                                Style="{StaticResource MaterialDesignFlatButton}"
                                                material:RippleAssist.Feedback="{DynamicResource MaterialDesignBody}"
                                                Foreground="{DynamicResource MaterialDesignBody}"
                                                Height="24"
                                                Width="24"
                                                Padding="0"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                Margin="0 -15 -15 0"
                                                Command="{x:Static material:DialogHost.CloseDialogCommand}">
                                            <material:PackIcon Kind="Close" 
                                                               Height="20" 
                                                               Width="20"/>
                                        </Button>

                                        <ContentControl Margin="0 20 0 0" s:View.Model="{Binding ScriptRepositoryManager}"/>
                                    </Grid>
                                </Button.CommandParameter>
                            </Button>
                            
                            <Button Style="{StaticResource MaterialDesignToolBarButton}"
                                    ToolTip="Media path modifiers"
                                    Padding="8"
                                    Command="{x:Static material:DialogHost.OpenDialogCommand}">
                                <Button.CommandParameter>
                                    <material:DialogHost Identifier="MediaPathModifierDialog">
                                        <Grid Margin="20" Width="500" MaxHeight="400"
                                              s:View.ActionTarget="{Binding}">
                                            <TextBlock Text="Media path modifiers" 
                                                       HorizontalAlignment="Left"
                                                       VerticalAlignment="Top"
                                                       Margin="0 -12 -15 0"
                                                       FontSize="14"
                                                       FontWeight="Bold"
                                                       Typography.Capitals="AllSmallCaps"/>

                                            <Button DockPanel.Dock="Top"
                                                    Style="{StaticResource MaterialDesignFlatButton}"
                                                    material:RippleAssist.Feedback="{DynamicResource MaterialDesignBody}"
                                                    Foreground="{DynamicResource MaterialDesignBody}"
                                                    Height="24"
                                                    Width="24"
                                                    Padding="0"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Top"
                                                    Margin="0 -15 -15 0"
                                                    Command="{x:Static material:DialogHost.CloseDialogCommand}">
                                                <material:PackIcon Kind="Close" 
                                                               Height="20" 
                                                               Width="20"/>
                                            </Button>
                                            <DockPanel LastChildFill="True"
                                                       Margin="0 20 0 0">
                                                <material:PopupBox Style="{StaticResource MaterialDesignMultiFloatingActionPopupBox}"
                                                               Width="32"
                                                               Height="32"
                                                               DockPanel.Dock="Bottom"
                                                               HorizontalAlignment="Center">

                                                    <material:PopupBox.ToggleContent>
                                                        <material:PackIcon Kind="Plus" 
                                                                       Width="22" 
                                                                       Height="22" 
                                                                       HorizontalAlignment="Center" 
                                                                       VerticalAlignment="Center"/>
                                                    </material:PopupBox.ToggleContent>

                                                    <material:Card>
                                                        <ItemsControl ItemsSource="{Binding MediaPathModifierTypes}"
                                                                  Margin="10">
                                                            <ItemsControl.ItemsPanel>
                                                                <ItemsPanelTemplate>
                                                                    <VirtualizingStackPanel/>
                                                                </ItemsPanelTemplate>
                                                            </ItemsControl.ItemsPanel>

                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate>
                                                                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                                                        Click="{s:Action OnMediaPathModifierAdd}"
                                                                        Content="{Binding Key}"
                                                                        Margin="5"
                                                                        Padding="10 0 10 0"
                                                                        Height="20"/>
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>
                                                    </material:Card>
                                                </material:PopupBox>

                                                <material:Card material:ShadowAssist.ShadowDepth="Depth1" Margin="0 0 0 10">
                                                    <ItemsControl DockPanel.Dock="Bottom"
                                                              ItemsSource="{Binding MediaPathModifiers}">
                                                        <ItemsControl.Template>
                                                            <ControlTemplate>
                                                                <ScrollViewer VerticalScrollBarVisibility="Visible" 
                                                                          HorizontalScrollBarVisibility="Disabled">
                                                                    <ItemsPresenter/>
                                                                </ScrollViewer>
                                                            </ControlTemplate>
                                                        </ItemsControl.Template>
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <Border Padding="5" Background="{DynamicResource MaterialDesignCardBackground}">
                                                                    <DockPanel LastChildFill="True" Margin="5 0 0 0">
                                                                        <Button DockPanel.Dock="Right"   
                                                                                Style="{StaticResource MaterialDesignFlatButton}"
                                                                                ToolTip="Remove"
                                                                                material:RippleAssist.Feedback="{DynamicResource MaterialDesignErrorBrush}"
                                                                                Foreground="{DynamicResource MaterialDesignErrorBrush}"
                                                                                Height="24" 
                                                                                Width="24" 
                                                                                Padding="0"
                                                                                Click="{s:Action OnMediaPathModifierRemove}" >
                                                                            <material:PackIcon Kind="Delete"/>
                                                                        </Button>

                                                                        <Button DockPanel.Dock="Right"   
                                                                        Style="{StaticResource MaterialDesignFlatButton}"
                                                                        Click="{s:Action OnMediaPathModifierConfigure}"
                                                                        ToolTip="Configure"
                                                                        Height="24" 
                                                                        Width="24" 
                                                                        Padding="0">
                                                                            <material:PackIcon Kind="Wrench" Width="14" Height="14"/>
                                                                        </Button>

                                                                        <TextBlock Text="{Binding Name, StringFormat={}{0}:}"
                                                                           Margin="0 0 10 0"
                                                                           FontWeight="Bold"
                                                                           DockPanel.Dock="Left"
                                                                           VerticalAlignment="Center"/>
                                                                        <TextBlock Text="{Binding Description}"
                                                                           DockPanel.Dock="Left"
                                                                           VerticalAlignment="Center"/>
                                                                    </DockPanel>
                                                                </Border>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </material:Card>
                                            </DockPanel>
                                        </Grid>

                                        <material:DialogHost.DialogContentTemplate>
                                            <DataTemplate>
                                                <DockPanel Margin="20" Width="475">
                                                    <Button DockPanel.Dock="Top"
                                                    Style="{StaticResource MaterialDesignFlatButton}"
                                                    material:RippleAssist.Feedback="{DynamicResource MaterialDesignBody}"
                                                    Foreground="{DynamicResource MaterialDesignBody}"
                                                    Height="24"
                                                    Width="24"
                                                    Padding="0"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Top"
                                                    Margin="0 -15 -15 0"
                                                    Command="{x:Static material:DialogHost.CloseDialogCommand}">
                                                        <material:PackIcon Kind="Close" 
                                                                       Height="20" 
                                                                       Width="20"/>
                                                    </Button>

                                                    <ContentControl s:View.Model="{Binding}"
                                                                DockPanel.Dock="Bottom"/>
                                                </DockPanel>
                                            </DataTemplate>
                                        </material:DialogHost.DialogContentTemplate>
                                    </material:DialogHost>
                                </Button.CommandParameter>
                                <material:PackIcon Kind="FileReplaceOutline" Height="19" Width="19"/>
                            </Button>

                            <Button Style="{StaticResource MaterialDesignToolBarButton}"
                                Click="{s:Action OnMapCurrentMediaPathToFile}"
                                ToolTip="Map media path to file" 
                                Padding="8">

                                <Button.IsEnabled>
                                    <MultiBinding Converter="{StaticResource BooleanAllConverter}">
                                        <MultiBinding.Bindings>
                                            <Binding Path="MediaResource" Converter="{StaticResource InvertedNullableToBooleanConverter}"/>
                                            <Binding Path="MediaResource.IsUrl"/>
                                        </MultiBinding.Bindings>
                                    </MultiBinding>
                                </Button.IsEnabled>
                                <material:PackIcon Kind="LinkPlus" Width="19" Height="19"/>
                            </Button>

                            <material:PopupBox DockPanel.Dock="Left"
                                               StaysOpen="True" 
                                               Style="{StaticResource MaterialDesignToolBarPopupBox}"
                                               ToolTip="Auto-skip">
                                <material:PopupBox.ToggleContent>
                                    <material:PackIcon Kind="SkipForward" 
                                                       Width="22" 
                                                       Height="22"/>
                                </material:PopupBox.ToggleContent>
                                <Grid Width="200" Margin="10">
                                    <StackPanel>
                                        <StackPanel Margin="0 0 0 10" Orientation="Horizontal">
                                            <TextBlock Text="Enabled:" 
                                                       Width="50"
                                                       Margin="0 0 10 0"
                                                       VerticalAlignment="Center"/>

                                            <CheckBox IsChecked="{Binding AutoSkipToScriptStartEnabled}"
                                                      Style="{StaticResource MaterialDesignSwitchToggleButton}"/>
                                        </StackPanel>

                                        <DockPanel Margin="0 0 0 10">
                                            <TextBlock Text="Offset:" 
                                                       DockPanel.Dock="Left"
                                                       Width="50"
                                                       Margin="0 0 10 0"
                                                       VerticalAlignment="Center"/>

                                            <TextBlock Text="{Binding AutoSkipToScriptStartOffset, StringFormat={}{0:0.0}s}" 
                                                       VerticalAlignment="Center"
                                                       DockPanel.Dock="Right" 
                                                       Width="40"
                                                       TextAlignment="Right"/>

                                            <Slider DockPanel.Dock="Left"
                                                    Value="{Binding AutoSkipToScriptStartOffset}"    
                                                    Minimum="0" 
                                                    Maximum="10"
                                                    TickFrequency="0.1"
                                                    VerticalAlignment="Center"
                                                    IsSnapToTickEnabled="True"
                                                    material:SliderAssist.OnlyShowFocusVisualWhileDragging="True"/>
                                        </DockPanel>
                                    </StackPanel>
                                </Grid>
                            </material:PopupBox>

                            <Menu Background="{DynamicResource MaterialDesignPaper}">
                                <MenuItem Style="{StaticResource MaterialDesignToolBarMenuItem}" ToolTip="Media loop">
                                    <MenuItem.Icon>
                                        <TextBlock Text="AB"
                                                   FontWeight="Bold"
                                                   FontSize="14"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center">
                                            <TextBlock.Resources>
                                                <Style TargetType="{x:Type TextBlock}">
                                                    <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Value="True">
                                                            <DataTrigger.Binding>
                                                                <MultiBinding Converter="{StaticResource BooleanAllConverter}">
                                                                    <Binding Path="MediaLoopSegment.StartPosition" Converter="{StaticResource InvertedNullableToBooleanConverter}"/>
                                                                    <Binding Path="MediaLoopSegment.EndPosition" Converter="{StaticResource InvertedNullableToBooleanConverter}"/>
                                                                </MultiBinding>
                                                            </DataTrigger.Binding>
                                                            <DataTrigger.Setters>
                                                                <Setter Property="Foreground" Value="{DynamicResource MaterialDesignSuccessBrush}"/>
                                                            </DataTrigger.Setters>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Resources>
                                        </TextBlock>
                                    </MenuItem.Icon>

                                    <MenuItem Padding="8" Header="Clear" Command="{s:Action ClearMediaLoop}">
                                        <MenuItem.IsEnabled>
                                            <MultiBinding Converter="{StaticResource BooleanOrConverter}">
                                                <Binding Path="MediaLoopSegment.StartPosition" Converter="{StaticResource InvertedNullableToBooleanConverter}"/>
                                                <Binding Path="MediaLoopSegment.EndPosition" Converter="{StaticResource InvertedNullableToBooleanConverter}"/>
                                            </MultiBinding>
                                        </MenuItem.IsEnabled>
                                        <MenuItem.Icon>
                                            <material:PackIcon Kind="WindowClose" Width="16" Height="16"/>
                                        </MenuItem.Icon>
                                    </MenuItem>

                                    <MenuItem Padding="8" Header="Set start" Command="{s:Action SetMediaLoopStartFromMediaPosition}">
                                        <MenuItem.Icon>
                                            <material:PackIcon Kind="ContainStart" Width="16" Height="16"/>
                                        </MenuItem.Icon>
                                    </MenuItem>

                                    <MenuItem Padding="8" Header="Set end" Command="{s:Action SetMediaLoopEndFromMediaPosition}">
                                        <MenuItem.Icon>
                                            <material:PackIcon Kind="ContainEnd" Width="16" Height="16"/>
                                        </MenuItem.Icon>
                                    </MenuItem>

                                    <MenuItem Padding="8" Header="Repeat chapter" Command="{s:Action SetMediaLoopFromCurrentChapter}">
                                        <MenuItem.Icon>
                                            <material:PackIcon Kind="Contain" Width="16" Height="16"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                </MenuItem>
                            </Menu>
                        </StackPanel>
                    </DockPanel>
                </Expander.Header>

                <StackPanel Margin="20 15 20 15">
                    <DockPanel LastChildFill="True" Margin="0 0 0 10">
                        <TextBlock Text="File:"
                                   DockPanel.Dock="Left"
                                   Margin="0 0 10 0"
                                   VerticalAlignment="Center"/>

                        <TextBox IsReadOnly="True"
                                 Text="{Binding MediaResource.Name, Mode=OneWay}"
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 material:HintAssist.Hint="{Binding MediaResource.Source}"
                                 DockPanel.Dock="Left"
                                 Margin="5 -10 0 0"
                                 VerticalAlignment="Center"/>
                    </DockPanel>
                    <DockPanel LastChildFill="False">
                        <TextBlock Text="Offset:" DockPanel.Dock="Left" Margin="0 0 10 0" VerticalAlignment="Center"/>

                        <metro:NumericUpDown Value="{Binding GlobalOffset}"
                                             DockPanel.Dock="Left"
                                             Interval="0.1"
                                             StringFormat="{}{0:F2}s"
                                             TrackMouseWheelWhenMouseOver="True"
                                             ValueChanged="{s:Action OnOffsetValueChanged}"
                                             Width="100"/>
                    </DockPanel>
                </StackPanel>
            </Expander>
        </material:Card>

        <controls:KeyframesHeatmap Height="36"
                                   Margin="0 0 0 4"
                                   Cursor="Hand"
                                   SeekRequest="{s:Action OnSeekRequest}"
                                   Keyframes="{Binding AxisKeyframes, Mode=OneWay}"
                                   Settings="{Binding AxisSettings, Mode=OneWay}"
                                   Duration="{Binding MediaDuration, Mode=OneWay}"
                                   Position="{Binding MediaPosition, Mode=OneWay}"
                                   BucketCount="{Binding HeatmapBucketCount}"
                                   InvertY="{Binding HeatmapInvertY}"
                                   ShowRange="{Binding HeatmapShowRange}"
                                   EnablePreview="{Binding HeatmapEnablePreview}"
                                   CombineHeat="{Binding HeatmapCombineHeat}"
                                   Panel.ZIndex="-1">
            <controls:KeyframesHeatmap.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Show script range" 
                              IsCheckable="True"
                              IsChecked="{Binding HeatmapShowRange}"/>
                    <MenuItem Header="Enable script preview" 
                              IsCheckable="True"
                              IsChecked="{Binding HeatmapEnablePreview}"/>
                    <MenuItem Header="Combine script heat" 
                              IsCheckable="True"
                              IsChecked="{Binding HeatmapCombineHeat}"/>
                    <MenuItem Header="Invert Y" 
                              IsCheckable="True"
                              IsChecked="{Binding HeatmapInvertY}"/>
                    <Separator/>
                    <MenuItem Header="Quality" IsEnabled="False"/>
                    <MenuItem material:RippleAssist.IsDisabled="True">
                        <MenuItem.Icon>
                            <TextBlock Text="{Binding HeatmapBucketCount}"
                                                   FontSize="10"
                                                   Padding="0"/>
                        </MenuItem.Icon>
                        <MenuItem.HeaderTemplate>
                            <DataTemplate>
                                <Slider Minimum="100"
                                        Maximum="{Binding Source={x:Static controls:KeyframesHeatmap.MaxBucketCount}}"
                                        Value="{Binding PlacementTarget.DataContext.HeatmapBucketCount, RelativeSource={RelativeSource FindAncestor, AncestorType=ContextMenu}}"
                                        material:SliderAssist.OnlyShowFocusVisualWhileDragging="True"/>
                            </DataTemplate>
                        </MenuItem.HeaderTemplate>
                    </MenuItem>
                    <Separator/>
                </ContextMenu>
            </controls:KeyframesHeatmap.ContextMenu>
        </controls:KeyframesHeatmap>

        <controls:MarkersPreview Height="18"
                                 Margin="0 0 0 20"
                                 Chapters="{Binding AxisChapters, Mode=OneWay}"
                                 Bookmarks="{Binding AxisBookmarks, Mode=OneWay}"
                                 Duration="{Binding MediaDuration, Mode=OneWay}"
                                 Position="{Binding MediaPosition, Mode=OneWay}"
                                 SeekRequest="{s:Action OnSeekRequest}"
                                 Panel.ZIndex="-1"/>
        <material:Card material:ShadowAssist.ShadowDepth="Depth1" Margin="0 0 0 10">
            <controls:NonReloadingTabControl ItemsSource="{Binding AxisModels}">
                <TabControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Width="46" Height="36">
                            <TextBlock Text="{Binding Key}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center">
                                <TextBlock.Resources>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBodyDisabled}"/>
                                        <Setter Property="FontWeight" Value="Medium"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Value.Script, Converter={StaticResource InvertedNullableToBooleanConverter}}" Value="True">
                                                <Setter Property="Foreground" Value="{DynamicResource InvertedPrimaryHueDarkBrush}"/>
                                                <Setter Property="FontWeight" Value="Black"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Value.Settings.BypassScript}" Value="True">
                                                <Setter Property="Foreground" Value="{DynamicResource MaterialDesignErrorBrush}"/>
                                                <Setter Property="FontWeight" Value="Black"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Resources>
                            </TextBlock>

                            <Grid HorizontalAlignment="Stretch"
                                  VerticalAlignment="Bottom">
                                <Border Margin="8 0 8 0" 
                                        Padding="0 0 0 4" 
                                        Background="Transparent"
                                        ToolTipService.InitialShowDelay="750"
                                        ToolTipService.Placement="Right"
                                        ToolTipService.HorizontalOffset="8"
                                        ToolTipService.VerticalOffset="-42">
                                    <Border.ToolTip>
                                        <StackPanel Typography.Capitals="AllSmallCaps">
                                            <TextBlock FontSize="13">
                                                <Run Text="Link axis:" FontWeight="Bold"/>
                                                <Run>
                                                    <Run.Resources>
                                                        <Style TargetType="{x:Type Run}">
