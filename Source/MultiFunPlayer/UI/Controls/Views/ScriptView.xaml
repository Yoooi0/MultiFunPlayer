                                                    <Setter Property="Foreground" Value="{DynamicResource MaterialDesignDivider}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Value.Settings.LinkAxis, Converter={StaticResource InvertedNullableToBooleanConverter}}" Value="True">
                                                            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignSuccessBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Value.Settings.LinkAxisHasPriority}" Value="True">
                                                            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignErrorBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </material:PackIcon.Resources>
                                        </material:PackIcon>

                                        <material:PackIcon HorizontalAlignment="Center" VerticalAlignment="Center" Kind="Circle" Width="6" Height="6">
                                            <material:PackIcon.Resources>
                                                <Style TargetType="material:PackIcon">
                                                    <Setter Property="Foreground" Value="{DynamicResource MaterialDesignDivider}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Value.Settings.SelectedMotionProvider, Converter={StaticResource InvertedNullableToBooleanConverter}}" Value="True">
                                                            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignSuccessBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Value="True">
                                                            <DataTrigger.Binding>
                                                                <MultiBinding Converter="{StaticResource MotionProviderOverridesScriptConverter}">
                                                                    <Binding Path="Value.Script"/>
                                                                    <Binding Path="Value.Settings.SelectedMotionProvider"/>
                                                                    <Binding Path="Value.Settings.MotionProviderBlend"/>
                                                                </MultiBinding>
                                                            </DataTrigger.Binding>
                                                            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignErrorBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Value.Settings.BypassMotionProvider}" Value="True">
                                                            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignDivider}"/>
                                                        </DataTrigger>
