                                                                    <Setter Property="Foreground" Value="{DynamicResource MaterialDesignLightErrorBrush}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Run.Resources>  
                                                </Run>
