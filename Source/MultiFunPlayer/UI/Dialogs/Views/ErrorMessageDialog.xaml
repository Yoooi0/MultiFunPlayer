<UserControl x:Class="MultiFunPlayer.UI.Dialogs.Views.ErrorMessageDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:ClassModifier="internal"
             mc:Ignorable="d">
    <Grid Margin="20" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 MaxWidth="800"
                 Margin="0 0 0 20"
                 FontFamily="Consolas"
                 Text="{Binding Message, Mode=OneWay}"
                 TextWrapping="Wrap"/>
        <Button Grid.Row="1"
                Style="{DynamicResource MaterialDesignFlatLightBgButton}"
                HorizontalAlignment="Center"
                Command="{x:Static material:DialogHost.CloseDialogCommand}"
                Content="Dismiss"
                IsDefault="True"/>
    </Grid>
</UserControl>
